---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import CommandPalette from '../components/CommandPalette.astro';
import SpeedInsights from '@vercel/speed-insights/astro';
import Analytics from '@vercel/analytics/astro';

import { ClientRouter } from 'astro:transitions';

interface Props {
  title: string;
  description?: string;
  fullWidth?: boolean;
}

const { title, description = "9th Grade Student Developer & Economics Enthusiast.", fullWidth = false } = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="theme-color" content="#0C0C0E" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="canonical" href={canonicalURL} />
    <ClientRouter />
    <Analytics />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Instrument+Serif:ital@0;1&family=Plus+Jakarta+Sans:wght@300;400;500;600;700&family=Space+Grotesk:wght@400;500;600&family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/katex@0.16.9/dist/katex.min.css" integrity="sha384-n8MVd4RsNIU0tAAbDJwPJzDEaqSD1odI+WdtXRGWt2kTvGFasHpSy3SV" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <title>{title}</title>
    <style is:global>
      /* ============================================
         EDITORIAL INDUSTRIAL DESIGN SYSTEM
         ============================================ */

      :root {
        /* Backgrounds */
        --bg-primary: #080808;
        --bg-secondary: #0f0f10;
        --bg-tertiary: #151518;
        --bg-elevated: #1d1d20;

        /* Accent */
        --accent: #e8a838;
        --accent-muted: #c4893a;
        --accent-glow: rgba(232,168,56,0.15);
        --accent-subtle: rgba(232,168,56,0.08);

        /* Text */
        --text-primary: #f1f0ea;
        --text-secondary: #aeaba2;
        --text-tertiary: #706d67;
        --text-quaternary: #4e4b45;

        /* Borders */
        --border-subtle: rgba(255,255,255,0.06);
        --border-default: rgba(255,255,255,0.12);
        --border-strong: rgba(255,255,255,0.2);
        --border-accent: rgba(232,168,56,0.3);

        /* Surfaces */
        --surface-panel: #131315;
        --surface-panel-alt: #19191c;

        /* Semantic */
        --color-success: #4ADE80;
        --color-error: #F87171;
        --color-info: #60A5FA;

        /* Spacing */
        --space-1: 0.25rem;
        --space-2: 0.5rem;
        --space-3: 0.75rem;
        --space-4: 1rem;
        --space-5: 1.25rem;
        --space-6: 1.5rem;
        --space-8: 2rem;
        --space-10: 2.5rem;
        --space-12: 3rem;
        --space-16: 4rem;

        /* Typography Scale */
        --text-xs: 0.75rem;
        --text-sm: 0.875rem;
        --text-base: 1rem;
        --text-lg: 1.125rem;
        --text-xl: 1.25rem;
        --text-2xl: 1.5rem;
        --text-3xl: 1.875rem;
        --text-4xl: 2.25rem;
        --text-5xl: 3rem;

        /* Line Heights */
        --leading-tight: 1.25;
        --leading-snug: 1.375;
        --leading-normal: 1.5;
        --leading-relaxed: 1.625;

        /* Component Tokens */
        --card-padding: var(--space-6);
        --card-radius: 0.25rem;

        /* Effects */
        --shadow-sm: 4px 4px 0 rgba(0,0,0,0.22);
        --shadow-md: 6px 6px 0 rgba(0,0,0,0.26);
        --shadow-lg: 10px 10px 0 rgba(0,0,0,0.3);
        --shadow-glow: 0 0 20px rgba(232,168,56,0.15);

        /* Focus Ring */
        --focus-ring: 0 0 0 2px var(--bg-primary), 0 0 0 4px var(--accent);

        /* Transitions */
        --transition-fast: 150ms cubic-bezier(0.4, 0, 0.2, 1);
        --transition-base: 200ms cubic-bezier(0.4, 0, 0.2, 1);
        --transition-smooth: 300ms cubic-bezier(0.4, 0, 0.2, 1);
        --transition-slow: 500ms cubic-bezier(0.4, 0, 0.2, 1);

        /* Easing */
        --ease-spring: cubic-bezier(0.22, 1, 0.36, 1);
        --ease-out: cubic-bezier(0, 0, 0.2, 1);
      }

      /* ============================================
         BASE STYLES
         ============================================ */

      html {
        font-family: 'Plus Jakarta Sans', system-ui, sans-serif;
        background-color: var(--bg-primary);
        color: var(--text-primary);
        scroll-behavior: smooth;
      }

      body {
        margin: 0;
        padding: 0;
        overflow-x: hidden;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
        font-size: var(--text-base);
        line-height: var(--leading-normal);
        color: var(--text-secondary);
        background:
          linear-gradient(180deg, rgba(255,255,255,0.01) 0%, rgba(255,255,255,0) 32%),
          var(--bg-primary);
      }

      /* Film Grain Noise Overlay */
      body::before {
        content: '';
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        pointer-events: none;
        z-index: 9999;
        opacity: 0.03;
        background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 256 256' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noise'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.9' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noise)'/%3E%3C/svg%3E");
        background-repeat: repeat;
        background-size: 256px 256px;
      }

      /* ============================================
         TYPOGRAPHY
         ============================================ */

      h1, h2, h3, h4, h5, h6 {
        font-family: 'Instrument Serif', Georgia, serif;
        color: var(--text-primary);
        line-height: var(--leading-tight);
        font-weight: 400;
        text-wrap: balance;
      }

      h1 {
        font-size: var(--text-4xl);
        letter-spacing: -0.02em;
      }
      h2 {
        font-size: var(--text-2xl);
        letter-spacing: -0.01em;
      }
      h3 {
        font-size: var(--text-xl);
      }
      h4 {
        font-size: var(--text-lg);
      }

      p {
        line-height: var(--leading-relaxed);
        color: var(--text-secondary);
      }

      /* Links */
      a {
        color: inherit;
        text-decoration: none;
        transition: color var(--transition-fast);
      }

      a:focus-visible {
        outline: none;
        box-shadow: var(--focus-ring);
        border-radius: 2px;
      }

      code, pre {
        font-family: 'JetBrains Mono', monospace;
      }

      /* Selection */
      ::selection {
        background-color: rgba(232, 168, 56, 0.3);
        color: var(--text-primary);
      }

      /* KaTeX dark theme */
      .katex {
        color: var(--text-primary);
      }

      /* ============================================
         ACCESSIBILITY
         ============================================ */

      :focus-visible {
        outline: none;
        box-shadow: var(--focus-ring);
      }

      button:focus-visible,
      [role="button"]:focus-visible {
        outline: none;
        box-shadow: var(--focus-ring);
      }

      .sr-only {
        position: absolute;
        width: 1px;
        height: 1px;
        padding: 0;
        margin: -1px;
        overflow: hidden;
        clip: rect(0, 0, 0, 0);
        white-space: nowrap;
        border-width: 0;
      }

      @media (prefers-reduced-motion: reduce) {
        *,
        *::before,
        *::after {
          animation-duration: 0.01ms !important;
          animation-iteration-count: 1 !important;
          transition-duration: 0.01ms !important;
          scroll-behavior: auto !important;
        }
      }

      /* ============================================
         VIEW TRANSITIONS
         ============================================ */

      ::view-transition-old(root) {
        animation: 300ms ease-out both slide-out-down;
      }

      ::view-transition-new(root) {
        animation: 300ms ease-out both slide-in-up;
      }

      @keyframes slide-out-down {
        from { opacity: 1; transform: translateY(0); }
        to { opacity: 0; transform: translateY(8px); }
      }

      @keyframes slide-in-up {
        from { opacity: 0; transform: translateY(-8px); }
        to { opacity: 1; transform: translateY(0); }
      }

      /* ============================================
         UTILITIES
         ============================================ */

      .scrollbar-hide::-webkit-scrollbar { display: none; }
      .scrollbar-hide { -ms-overflow-style: none; scrollbar-width: none; }

      .table-container {
        width: 100%;
        overflow-x: auto;
        margin: var(--space-8) 0;
        border: 1px solid var(--border-default);
        border-radius: var(--card-radius);
      }

      img {
        max-width: 100%;
        height: auto;
        border-radius: var(--card-radius);
      }

      .text-balance { text-wrap: balance; }
      .text-pretty { text-wrap: pretty; }

      /* Global hard-edge language */
      .industrial-shell :is(.rounded-card, [class*="rounded-[2px]"], [class*="rounded-[3px]"], [class*="rounded-[4px]"]) {
        border-radius: var(--card-radius);
      }

      .industrial-shell [class*="backdrop-blur"] {
        backdrop-filter: none !important;
        -webkit-backdrop-filter: none !important;
      }

      /* ============================================
         VISUAL EFFECTS UTILITIES
         ============================================ */

      /* Dot Grid Pattern */
      .dot-pattern {
        background-image: radial-gradient(circle, rgba(255,255,255,0.04) 1px, transparent 1px);
        background-size: 24px 24px;
      }

      /* Gradient Divider */
      .gradient-divider {
        height: 1px;
        background: linear-gradient(90deg, transparent, var(--border-default), transparent);
        border: none;
      }

      /* Solid panel utility */
      .glass {
        background: linear-gradient(180deg, var(--surface-panel) 0%, var(--surface-panel-alt) 100%);
        border: 1px solid var(--border-default);
        box-shadow: var(--shadow-sm);
      }

      /* ============================================
         ANIMATION UTILITIES â€” CINEMATIC REVEAL SYSTEM
         ============================================ */

      /* ---------- BASE: shared transition config ---------- */
      .reveal, .reveal-left, .reveal-right, .reveal-scale, .reveal-blur, .reveal-mask {
        will-change: transform, opacity;
      }

      /* ---------- REVEAL UP ---------- */
      .reveal {
        opacity: 0;
        transform: translateY(30px);
        transition:
          opacity 650ms var(--ease-spring),
          transform 650ms var(--ease-spring);
      }
      .reveal.visible {
        opacity: 1;
        transform: translateY(0);
      }

      /* ---------- REVEAL LEFT ---------- */
      .reveal-left {
        opacity: 0;
        transform: translateX(-44px);
        transition:
          opacity 650ms var(--ease-spring),
          transform 650ms var(--ease-spring);
      }
      .reveal-left.visible {
        opacity: 1;
        transform: translateX(0);
      }

      /* ---------- REVEAL RIGHT ---------- */
      .reveal-right {
        opacity: 0;
        transform: translateX(44px);
        transition:
          opacity 650ms var(--ease-spring),
          transform 650ms var(--ease-spring);
      }
      .reveal-right.visible {
        opacity: 1;
        transform: translateX(0);
      }

      /* ---------- REVEAL SCALE ---------- */
      .reveal-scale {
        opacity: 0;
        transform: scale(0.92);
        transition:
          opacity 760ms var(--ease-spring),
          transform 760ms var(--ease-spring);
      }
      .reveal-scale.visible {
        opacity: 1;
        transform: scale(1);
      }

      /* ---------- REVEAL BLUR ---------- */
      .reveal-blur {
        opacity: 0;
        transform: translateY(18px);
        transition: opacity 700ms var(--ease-spring), transform 700ms var(--ease-spring);
      }
      .reveal-blur.visible {
        opacity: 1;
        transform: translateY(0);
      }

      /* ---------- REVEAL MASK (horizontal clip wipe) ---------- */
      .reveal-mask {
        clip-path: inset(0 100% 0 0);
        transition: clip-path 1.1s var(--ease-spring);
      }
      .reveal-mask.visible {
        clip-path: inset(0 0% 0 0);
      }

      /* ---------- Stagger Delays (wider spread for drama) ---------- */
      [data-delay="1"] { transition-delay: 100ms; }
      [data-delay="2"] { transition-delay: 250ms; }
      [data-delay="3"] { transition-delay: 400ms; }
      [data-delay="4"] { transition-delay: 550ms; }
      [data-delay="5"] { transition-delay: 700ms; }
      [data-delay="6"] { transition-delay: 850ms; }
      [data-delay="7"] { transition-delay: 1000ms; }

      /* ---------- Hero-specific: scroll-linked fade ---------- */
      .hero-fade-on-scroll {
        transition: opacity 0s, transform 0s;
        will-change: opacity, transform;
      }

      /* ---------- Legacy: simple fade-in for non-homepage ---------- */
      .fade-in {
        animation: fadeIn var(--transition-smooth) forwards;
        opacity: 0;
        transform: translateY(10px);
      }

      @keyframes fadeIn {
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      .fade-in-up {
        animation: fadeInUp var(--transition-smooth) forwards;
        opacity: 0;
      }

      @keyframes fadeInUp {
        from { opacity: 0; transform: translateY(16px); }
        to { opacity: 1; transform: translateY(0); }
      }

      .hover-lift {
        transition: transform var(--transition-base), box-shadow var(--transition-base);
      }
      .hover-lift:hover {
        transform: translateY(-4px);
        box-shadow: var(--shadow-lg);
      }

      .press-effect {
        transition: transform var(--transition-fast);
      }
      .press-effect:active {
        transform: scale(0.98);
      }

      /* Font Awesome & Emoji overrides */
      .fa, .fas, .far, .fal, .fab, .fa-brands, .fa-solid, .fa-regular, .fa-light {
        font-family: "Font Awesome 6 Free", "Font Awesome 6 Brands", sans-serif !important;
      }
      .emoji {
        font-family: "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol", sans-serif !important;
      }

      /* ============================================
         SCROLL-DRIVEN STORYTELLING UTILITIES
         ============================================ */

      /* Scroll Progress Bar */
      .scroll-progress {
        position: fixed;
        top: 0;
        left: 0;
        height: 2px;
        background: linear-gradient(90deg, var(--accent), var(--accent-muted));
        z-index: 9998;
        transform-origin: left;
        transform: scaleX(0);
        will-change: transform;
        transition: none;
      }

      /* Parallax Background */
      .parallax-bg {
        will-change: transform;
        transition: none;
      }

      /* Counter Animate */
      .counter-value {
        font-variant-numeric: tabular-nums;
        display: inline-block;
      }

      /* Text Reveal via clip-path */
      .text-clip-reveal {
        clip-path: inset(0 100% 0 0);
        transition: clip-path 1s var(--ease-spring);
      }

      .text-clip-reveal.visible {
        clip-path: inset(0 0% 0 0);
      }

      /* Section container for storytelling pages */
      .story-section {
        position: relative;
        overflow: hidden;
      }

      .story-container {
        max-width: 80rem;
        margin: 0 auto;
        padding: 0 1rem;
      }

      @media (min-width: 640px) {
        .story-container { padding: 0 1.5rem; }
      }

      @media (min-width: 1024px) {
        .story-container { padding: 0 2rem; }
      }

      /* Scroll indicator animations */
      @keyframes spinSlow {
        from { transform: rotate(0deg); }
        to { transform: rotate(360deg); }
      }

      .animate-spin-slow {
        animation: spinSlow 12s linear infinite;
      }

      @keyframes gentleBounce {
        0%, 100% { transform: translateY(0); }
        50% { transform: translateY(3px); }
      }

      .animate-gentle-bounce {
        animation: gentleBounce 2.4s cubic-bezier(0.4, 0, 0.2, 1) infinite;
      }

      .scroll-indicator {
        transition: opacity 0.6s ease, transform 0.6s ease;
      }

      .scroll-indicator.hidden-by-scroll {
        opacity: 0;
        transform: translate(-50%, 10px);
        pointer-events: none;
      }

      /* Horizontal line grow */
      .line-grow {
        width: 0;
        transition: width 1.2s var(--ease-spring);
      }

      .line-grow.visible {
        width: 100%;
      }

      /* ============================================
         MARQUEE
         ============================================ */
      @keyframes marqueeScroll {
        0% { transform: translateX(0); }
        100% { transform: translateX(-50%); }
      }

      .marquee-track {
        animation: marqueeScroll 30s linear infinite;
        width: max-content;
      }

      .marquee-track:hover {
        animation-play-state: paused;
      }

      /* ============================================
         SIDE NAV DOTS
         ============================================ */
      .side-dot .active-dot {
        background-color: var(--accent);
        transform: scale(1.5);
        box-shadow: 0 0 8px rgba(232,168,56,0.4);
      }

      /* ============================================
         3D TILT CARD
         ============================================ */
      .tilt-card {
        transform-style: preserve-3d;
        perspective: 1000px;
      }
    </style>
  </head>
  <body class="industrial-shell min-h-screen flex flex-col bg-[#080808]">
    <Header />
    <CommandPalette />
    <main id="main-content" class:list={['flex-grow w-full', !fullWidth && 'max-w-5xl mx-auto px-4 sm:px-6 py-12']} tabindex="-1">
      <slot />
    </main>
    <Footer />
    <SpeedInsights />

    <script>
      const setup = () => {
        // Mobile menu logic
        const menuToggle = document.getElementById('menu-toggle');
        const mobileMenu = document.getElementById('mobile-menu');
        const menuOpenIcon = document.querySelector('.menu-open');
        const menuCloseIcon = document.querySelector('.menu-close');

        if (menuToggle && mobileMenu && menuOpenIcon && menuCloseIcon) {
          const newToggle = menuToggle.cloneNode(true);
          if (menuToggle.parentNode) {
            menuToggle.parentNode.replaceChild(newToggle, menuToggle);
          }

          // Re-query icons from the cloned button, since the originals are now detached
          const newMenuOpenIcon = newToggle.querySelector('.menu-open');
          const newMenuCloseIcon = newToggle.querySelector('.menu-close');

          newToggle.addEventListener('click', () => {
            mobileMenu.classList.toggle('hidden');
            newMenuOpenIcon?.classList.toggle('hidden');
            newMenuCloseIcon?.classList.toggle('hidden');
          });
        }

        // Close mobile menu when clicking outside
        const handleOutsideClick = (e: Event) => {
          const mobileMenu = document.getElementById('mobile-menu');
          const menuToggle = document.getElementById('menu-toggle');
          const menuOpenIcon = document.querySelector('.menu-open');
          const menuCloseIcon = document.querySelector('.menu-close');

          if (mobileMenu && !mobileMenu.contains(e.target as Node) && !menuToggle?.contains(e.target as Node)) {
            mobileMenu.classList.add('hidden');
            menuOpenIcon?.classList.remove('hidden');
            menuCloseIcon?.classList.add('hidden');
          }
        };

        document.removeEventListener('click', handleOutsideClick);
        document.addEventListener('click', handleOutsideClick);

        // Reveal animation trigger
        const revealObserver = new IntersectionObserver((entries) => {
          entries.forEach(entry => {
            if (entry.isIntersecting) {
              entry.target.classList.add('visible');
            }
          });
        }, { threshold: 0.1 });

        document.querySelectorAll('.reveal, .reveal-left, .reveal-right, .reveal-scale, .reveal-blur, .reveal-mask, .line-grow').forEach(el => revealObserver.observe(el));

        // Legacy animation trigger
        const observer = new IntersectionObserver((entries) => {
          entries.forEach(entry => {
            if (entry.isIntersecting) {
              entry.target.classList.add('fade-in');
            }
          });
        }, { threshold: 0.1 });

        document.querySelectorAll('section, .animate-on-scroll').forEach(el => observer.observe(el));

        // Copy Code Button Logic
        document.querySelectorAll('pre').forEach(pre => {
          if (pre.querySelector('.copy-btn')) return;

          pre.classList.add('group', 'relative');

          const btn = document.createElement('button');
          btn.className = 'copy-btn absolute top-3 right-3 text-[#6B6B65] hover:text-[#F5F5F0] bg-[#1C1C1F]/80 hover:bg-[#242428] rounded-[3px] px-2 py-1 text-xs transition-all opacity-0 group-hover:opacity-100 focus:opacity-100 border border-white/[0.06]';
          btn.innerHTML = '<i class="fa-regular fa-copy"></i>';
          btn.setAttribute('aria-label', 'Copy code');

          btn.addEventListener('click', async () => {
            const code = pre.querySelector('code')?.innerText || pre.innerText;
            try {
              await navigator.clipboard.writeText(code);

              btn.innerHTML = '<i class="fa-solid fa-check"></i>';
              btn.classList.add('text-[#4ADE80]');
              btn.classList.remove('text-[#6B6B65]');

              setTimeout(() => {
                btn.innerHTML = '<i class="fa-regular fa-copy"></i>';
                btn.classList.remove('text-[#4ADE80]');
                btn.classList.add('text-[#6B6B65]');
              }, 2000);
            } catch (err) {
              console.error('Failed to copy:', err);
            }
          });

          pre.appendChild(btn);
        });
      };

      setup();
      document.addEventListener('astro:page-load', setup);
    </script>
  </body>
</html>
