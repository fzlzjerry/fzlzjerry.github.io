---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import CommandPalette from '../components/CommandPalette.astro';
import SpeedInsights from '@vercel/speed-insights/astro';

import { ClientRouter } from 'astro:transitions';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "9th Grade Student Developer & Economics Enthusiast." } = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="theme-color" content="#ffffff" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="canonical" href={canonicalURL} />
    <ClientRouter />
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Playfair+Display:ital,wght@0,400;0,600;1,400&family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet">
    
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/katex@0.16.9/dist/katex.min.css" integrity="sha384-n8MVd4RsNIU0tAAbDJwPJzDEaqSD1odI+WdtXRGWt2kTvGFasHpSy3SV" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    
    <title>{title}</title>
    <style is:global>
      :root {
        /* Base Palette - Zinc */
        --bg-body: #ffffff;
        --bg-subtle: #fafafa; /* zinc-50 */
        --bg-card: #ffffff;
        --bg-hover: #f4f4f5; /* zinc-100 */
        
        --text-main: #18181b; /* zinc-900 */
        --text-secondary: #52525b; /* zinc-600 */
        --text-muted: #a1a1aa; /* zinc-400 */
        
        --border-light: #e4e4e7; /* zinc-200 */
        --border-medium: #d4d4d8; /* zinc-300 */
        
        --accent-primary: #18181b;
        --accent-secondary: #52525b;
        
        /* Functional Colors */
        --primary-light: #ffffff;
        --accent-light: #f4f4f5;
        --text-light: #18181b;
        --text-muted-light: #71717a;
        
        /* Effects */
        --shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.05);
        --shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.05), 0 2px 4px -2px rgb(0 0 0 / 0.05);
        --shadow-lg: 0 10px 15px -3px rgb(0 0 0 / 0.05), 0 4px 6px -4px rgb(0 0 0 / 0.05);
        
        --transition-fast: 150ms cubic-bezier(0.4, 0, 0.2, 1);
        --transition-base: 200ms cubic-bezier(0.4, 0, 0.2, 1);
        --transition-smooth: 300ms cubic-bezier(0.4, 0, 0.2, 1);
      }
      
      html {
        font-family: 'Inter', system-ui, sans-serif;
        background-color: var(--bg-body);
        color: var(--text-main);
      }

      body {
        margin: 0;
        padding: 0;
        overflow-x: hidden;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
      }
      
      /* Typography Enhancements */
      h1, h2, h3, h4, h5, h6 {
        font-family: 'Playfair Display', serif;
        color: var(--text-main);
        line-height: 1.2;
        font-weight: 600;
      }
      
      h1 { font-size: 2.5rem; letter-spacing: -0.02em; }
      h2 { font-size: 2rem; letter-spacing: -0.01em; }
      h3 { font-size: 1.5rem; }
      
      p {
        line-height: 1.75;
        color: var(--text-secondary);
      }

      code, pre {
        font-family: 'JetBrains Mono', monospace;
      }

      /* Selection */
      ::selection {
        background-color: var(--text-main);
        color: white;
      }

      /* Utilities */
      .scrollbar-hide::-webkit-scrollbar { display: none; }
      .scrollbar-hide { -ms-overflow-style: none; scrollbar-width: none; }
      
      .table-container {
        width: 100%;
        overflow-x: auto;
        margin: 2rem 0;
        border: 1px solid var(--border-light);
        border-radius: 0.5rem;
      }

      img {
        max-width: 100%;
        height: auto;
        border-radius: 0.75rem;
      }

      /* Animation Utilities */
      .fade-in {
        animation: fadeIn var(--transition-smooth) forwards;
        opacity: 0;
        transform: translateY(10px);
      }
      
      @keyframes fadeIn {
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      .hover-lift {
        transition: transform var(--transition-base), box-shadow var(--transition-base);
      }
      
      .hover-lift:hover {
        transform: translateY(-2px);
        box-shadow: var(--shadow-md);
      }

      /* Font Awesome & Emoji overrides */
      .fa, .fas, .far, .fal, .fab, .fa-brands, .fa-solid, .fa-regular, .fa-light {
        font-family: "Font Awesome 6 Free", "Font Awesome 6 Brands", sans-serif !important;
      }
      .emoji {
        font-family: "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol", sans-serif !important;
      }
    </style>
  </head>
  <body class="min-h-screen flex flex-col bg-white">
    <Header />
    <CommandPalette />
    <main class="flex-grow w-full max-w-5xl mx-auto px-4 sm:px-6 py-12 selection:bg-zinc-900 selection:text-white">
      <slot />
    </main>
    <Footer />
    <SpeedInsights />
    
    <script>
      const setup = () => {
        // Mobile menu logic
        const menuToggle = document.getElementById('menu-toggle');
        const mobileMenu = document.getElementById('mobile-menu');
        const menuOpenIcon = document.querySelector('.menu-open');
        const menuCloseIcon = document.querySelector('.menu-close');
        
        if (menuToggle && mobileMenu && menuOpenIcon && menuCloseIcon) {
          // Remove old listeners if any (though elements are likely new)
          const newToggle = menuToggle.cloneNode(true);
          if (menuToggle.parentNode) {
            menuToggle.parentNode.replaceChild(newToggle, menuToggle);
          }
          
          newToggle.addEventListener('click', () => {
            mobileMenu.classList.toggle('hidden');
            menuOpenIcon.classList.toggle('hidden');
            menuCloseIcon.classList.toggle('hidden');
          });
        }

        // Close mobile menu when clicking outside
        const handleOutsideClick = (e: Event) => {
          const mobileMenu = document.getElementById('mobile-menu');
          const menuToggle = document.getElementById('menu-toggle');
          const menuOpenIcon = document.querySelector('.menu-open');
          const menuCloseIcon = document.querySelector('.menu-close');

          if (mobileMenu && !mobileMenu.contains(e.target as Node) && !menuToggle?.contains(e.target as Node)) {
            mobileMenu.classList.add('hidden');
            menuOpenIcon?.classList.remove('hidden');
            menuCloseIcon?.classList.add('hidden');
          }
        };
        
        document.removeEventListener('click', handleOutsideClick);
        document.addEventListener('click', handleOutsideClick);
        
        // Animation trigger
        const observer = new IntersectionObserver((entries) => {
          entries.forEach(entry => {
            if (entry.isIntersecting) {
              entry.target.classList.add('fade-in');
            }
          });
        }, { threshold: 0.1 });
        
        document.querySelectorAll('section, .animate-on-scroll').forEach(el => observer.observe(el));
        
        // Copy Code Button Logic
        document.querySelectorAll('pre').forEach(pre => {
          // Check if already has button
          if (pre.querySelector('.copy-btn')) return;

          // Ensure pre is relative for positioning
          // We add 'group' for hover effects
          pre.classList.add('group', 'relative');
          
          const btn = document.createElement('button');
          // Style: hidden by default, shown on group hover
          // Note: using !important classes or inline styles might be safer if Tailwind conflict, but standard utility classes work
          btn.className = 'copy-btn absolute top-3 right-3 text-zinc-500 hover:text-zinc-300 bg-zinc-800/40 hover:bg-zinc-800 backdrop-blur rounded-md px-2 py-1 text-xs transition-all opacity-0 group-hover:opacity-100 focus:opacity-100';
          btn.innerHTML = '<i class="fa-regular fa-copy"></i>';
          btn.setAttribute('aria-label', 'Copy code');
          
          btn.addEventListener('click', async () => {
            const code = pre.querySelector('code')?.innerText || pre.innerText;
            try {
              await navigator.clipboard.writeText(code);
              
              // Feedback
              btn.innerHTML = '<i class="fa-solid fa-check"></i>';
              btn.classList.add('text-emerald-400', 'text-zinc-300');
              btn.classList.remove('text-zinc-500');
              
              setTimeout(() => {
                btn.innerHTML = '<i class="fa-regular fa-copy"></i>';
                btn.classList.remove('text-emerald-400', 'text-zinc-300');
                btn.classList.add('text-zinc-500');
              }, 2000);
            } catch (err) {
              console.error('Failed to copy:', err);
            }
          });
          
          pre.appendChild(btn);
        });
      };

      // Run on initial load
      setup();

      // Run on view transitions navigation
      document.addEventListener('astro:page-load', setup);
    </script>
  </body>
</html>