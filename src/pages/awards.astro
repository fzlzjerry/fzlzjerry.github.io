---
import Layout from '../layouts/Layout.astro';
import ImageModal from '../components/ImageModal.astro';

const awardCategories = [
  {
    id: 'cnec2025',
    name: 'CNEC2025 Pre division',
    description: 'Achievements in the National Economics Challenge (CNEC) Pre Division 2025',
    awards: [
      {
        title: 'Regional Overall Team Silver Award',
        date: 'December 2025',
        category: 'Team Achievement',
        certificateId: '202503100579',
        achievement: 'Regional Overall Team Silver Award',
        division: 'Pre Division (Entry-Level Division)',
        level: 'NEC Preliminary Level 2025',
        teamMembers: [
          { name: 'Yixuan Cheng', role: 'Team Leader' },
          { name: 'Jacky Xiao', role: 'Team Member' },
          { name: 'Jerry Liu', role: 'Team Member' },
          { name: 'Candy Gond', role: 'Team Member' }
        ]
      },
      {
        title: 'National Top Scoring Individual Gold Award',
        date: 'December 2025',
        category: 'Individual Achievement',
        certificateId: '202503200667',
        achievement: 'National Top Scoring Individual Gold Award',
        division: 'Pre Division (Entry-Level Division)',
        level: 'NEC Preliminary Level 2025',
        score: '330/360'
      },
      {
        title: 'Macroeconomics Hall of Fame',
        date: 'December 2025',
        category: 'Special Recognition',
        certificateId: '202503200703',
        achievement: 'Macroeconomics Hall of Fame',
        division: 'Pre Division (Entry-Level Division)',
        level: 'NEC Preliminary Level 2025',
        criteria: [
          'Outstanding academic performance in macroeconomics',
          'Innovative research contributions',
          'Leadership in economic projects'
        ]
      }
    ]
  },
  {
    id: 'himcm2025',
    name: 'HiMCM 2025',
    description: 'High School Mathematical Contest in Modeling (HiMCM) 2025',
    awards: [
      {
        title: 'Meritorious Award',
        date: '2025',
        category: 'Team Achievement',
        certificateId: '16400',
        achievement: 'Meritorious',
        division: 'High School Mathematical Contest in Modeling',
        level: 'HiMCM 2025',
        school: 'BASIS International school Park Lane Harbour',
        advisor: 'Shazaib Ramzan Nauman',
        teamMembers: [
          { name: 'Yixuan Cheng', role: 'Team Member' },
          { name: 'Lan Jocelyn Bai', role: 'Team Member' },
          { name: 'Sibo Huang', role: 'Team Member' }
        ]
      }
    ]
  }
];
---

<Layout
  title="Awards - Morax Cheng"
  description="View Morax Cheng's academic achievements and awards, including recognitions from the National Economics Challenge (CNEC) 2025 Pre Division."
>
  <div class="max-w-4xl mx-auto">
    <!-- Page Header -->
    <header class="py-12 md:py-20 reveal">
      <h1 class="text-3xl md:text-4xl font-serif font-medium text-brand-text mb-4">Academic Achievements</h1>
      <p class="text-brand-muted text-lg leading-relaxed">
        Recognitions and awards from academic competitions.
      </p>
    </header>

    <!-- Divider -->
    <div class="h-px bg-gradient-to-r from-white/[0.06] via-white/[0.06] to-transparent mb-10" aria-hidden="true"></div>

    <!-- Folder View -->
    <div id="folder-container" class="grid gap-5 md:grid-cols-2">
      {awardCategories.map((cat, i) => (
        <div
          class={`award-folder group glass-card p-6 cursor-pointer hover-lift reveal stagger-${i + 1}`}
          data-folder-id={cat.id}
          tabindex="0"
          role="button"
          aria-label={`Open ${cat.name} awards`}
        >
          <div class="flex justify-between items-start mb-5">
            <div class="flex items-center justify-center w-10 h-10 rounded-lg bg-brand-accent/[0.08] text-brand-accent">
              <i class="fa-solid fa-folder text-lg" aria-hidden="true"></i>
            </div>
            <span class="inline-flex items-center px-2.5 py-1 bg-white/[0.04] text-brand-muted text-xs rounded-md font-mono border border-white/[0.06]">
              {cat.awards.length} {cat.awards.length === 1 ? 'Award' : 'Awards'}
            </span>
          </div>

          <h2 class="text-xl font-medium text-brand-text mb-2 group-hover:text-brand-accent transition-colors duration-smooth font-serif">
            {cat.name}
          </h2>
          <p class="text-sm text-brand-muted mb-6 line-clamp-2">
            {cat.description}
          </p>

          <div class="flex items-center gap-1.5 text-sm font-medium text-brand-muted group-hover:text-brand-accent transition-colors duration-smooth">
            View Details
            <i class="fa-solid fa-arrow-right text-xs transition-transform duration-smooth group-hover:translate-x-0.5" aria-hidden="true"></i>
          </div>
        </div>
      ))}
    </div>

    <!-- CNEC 2025 Awards View -->
    <div id="awards-cnec2025" class="award-container hidden">
      <div class="flex items-center gap-4 pb-6 mb-8 border-b border-white/[0.04]">
        <button class="back-to-folders flex items-center justify-center w-9 h-9 text-brand-muted hover:text-brand-accent hover:bg-white/[0.04] rounded-lg transition-all duration-fast" aria-label="Back to award categories">
          <i class="fa-solid fa-arrow-left" aria-hidden="true"></i>
        </button>
        <h2 class="text-2xl font-serif font-medium text-brand-text">{awardCategories[0].name}</h2>
      </div>
      
      <div class="flex flex-col gap-6">
        {awardCategories[0].awards.map((award, index) => (
          <article class="glass-card overflow-hidden reveal">
            <div class="p-6 md:p-8 grid md:grid-cols-[1fr_280px] gap-8">
              
              <!-- Content -->
              <div class="flex flex-col gap-5">
                <div class="flex flex-col gap-2">
                  <div class="flex flex-wrap items-center gap-3 text-xs text-brand-muted font-mono">
                    <span class="flex items-center gap-1.5">
                      <i class="fa-regular fa-calendar text-brand-accent/60" aria-hidden="true"></i>
                      {award.date}
                    </span>
                    <span class="w-1 h-1 rounded-full bg-neutral-700" aria-hidden="true"></span>
                    <span>{award.category}</span>
                  </div>
                  
                  <h3 class="text-xl font-medium text-brand-text leading-tight font-serif">
                    {award.title}
                  </h3>
                </div>

                <div class="flex flex-col gap-4 text-sm">
                  <!-- Info Grid -->
                  <div class="grid grid-cols-2 gap-4 p-4 bg-white/[0.02] rounded-xl border border-white/[0.04]">
                    <div>
                      <span class="block text-xs text-brand-muted mb-1 font-mono uppercase tracking-wider">Achievement</span>
                      <span class="font-medium text-brand-text">{award.achievement}</span>
                    </div>
                    <div>
                      <span class="block text-xs text-brand-muted mb-1 font-mono uppercase tracking-wider">Score</span>
                      <span class="font-medium text-brand-text font-mono">{award.score || 'N/A'}</span>
                    </div>
                    <div>
                      <span class="block text-xs text-brand-muted mb-1 font-mono uppercase tracking-wider">Division</span>
                      <span class="text-brand-muted">{award.division}</span>
                    </div>
                    <div>
                      <span class="block text-xs text-brand-muted mb-1 font-mono uppercase tracking-wider">Certificate ID</span>
                      <span class="font-mono text-brand-muted">{award.certificateId}</span>
                    </div>
                  </div>

                  {award.teamMembers && (
                    <div>
                      <h4 class="text-xs font-medium text-brand-muted uppercase tracking-wider mb-3 font-mono">Team Members</h4>
                      <div class="flex flex-wrap gap-2">
                        {award.teamMembers.map(member => (
                          <span class="inline-flex items-center gap-1.5 px-2.5 py-1 bg-white/[0.04] border border-white/[0.06] rounded-md text-brand-muted text-xs">
                            <span class="w-1.5 h-1.5 rounded-full bg-brand-accent/40"></span>
                            {member.name}
                            <span class="text-neutral-600">({member.role})</span>
                          </span>
                        ))}
                      </div>
                    </div>
                  )}

                  {award.criteria && (
                    <div>
                      <h4 class="text-xs font-medium text-brand-muted uppercase tracking-wider mb-2 font-mono">Criteria</h4>
                      <ul class="flex flex-col gap-1.5 text-brand-muted">
                        {award.criteria.map(criterion => (
                          <li class="flex items-start gap-2">
                            <span class="mt-1.5 w-1 h-1 rounded-full bg-brand-accent/40 flex-shrink-0"></span>
                            <span>{criterion}</span>
                          </li>
                        ))}
                      </ul>
                    </div>
                  )}
                </div>
              </div>

              <!-- Certificate Image -->
              <div class="flex flex-col items-center justify-center p-4 bg-white/[0.02] rounded-xl border border-white/[0.04] border-dashed">
                <a
                  href={`/certificates/cnec-${award.title === 'National Top Scoring Individual Gold Award' ? 3 : award.title === 'Macroeconomics Hall of Fame' ? 2 : 1}.jpg`}
                  data-modal="certificate-modal"
                  class="group/cert relative block w-full overflow-hidden rounded-lg bg-brand-surface transition-all hover:scale-[1.02]"
                  aria-label={`View ${award.title} certificate`}
                >
                  <img
                    src={`/certificates/cnec-${award.title === 'National Top Scoring Individual Gold Award' ? 3 : award.title === 'Macroeconomics Hall of Fame' ? 2 : 1}.jpg`}
                    alt={`${award.title} Certificate`}
                    class="w-full h-auto object-contain rounded-lg"
                    loading="lazy"
                  />
                  <div class="absolute inset-0 bg-black/0 group-hover/cert:bg-black/20 transition-colors flex items-center justify-center opacity-0 group-hover/cert:opacity-100">
                    <span class="px-3 py-1.5 bg-brand-bg/80 backdrop-blur text-xs font-medium text-brand-text rounded-full border border-white/[0.1]">
                      View Full Size
                    </span>
                  </div>
                </a>
                <p class="mt-3 text-xs text-center text-neutral-600 font-mono">
                  Issued by CEE &middot; CNEC 2025
                </p>
              </div>

            </div>
          </article>
        ))}
      </div>
    </div>

    <!-- HiMCM 2025 Awards View -->
    <div id="awards-himcm2025" class="award-container hidden">
      <div class="flex items-center gap-4 pb-6 mb-8 border-b border-white/[0.04]">
        <button class="back-to-folders flex items-center justify-center w-9 h-9 text-brand-muted hover:text-brand-accent hover:bg-white/[0.04] rounded-lg transition-all duration-fast" aria-label="Back to award categories">
          <i class="fa-solid fa-arrow-left" aria-hidden="true"></i>
        </button>
        <h2 class="text-2xl font-serif font-medium text-brand-text">{awardCategories[1].name}</h2>
      </div>

      <div class="flex flex-col gap-6">
        {awardCategories[1].awards.map((award) => (
          <article class="glass-card overflow-hidden reveal">
            <div class="p-6 md:p-8 grid md:grid-cols-[1fr_280px] gap-8">

              <!-- Content -->
              <div class="flex flex-col gap-5">
                <div class="flex flex-col gap-2">
                  <div class="flex flex-wrap items-center gap-3 text-xs text-brand-muted font-mono">
                    <span class="flex items-center gap-1.5">
                      <i class="fa-regular fa-calendar text-brand-accent/60" aria-hidden="true"></i>
                      {award.date}
                    </span>
                    <span class="w-1 h-1 rounded-full bg-neutral-700" aria-hidden="true"></span>
                    <span>{award.category}</span>
                  </div>

                  <h3 class="text-xl font-medium text-brand-text leading-tight font-serif">
                    {award.title}
                  </h3>
                </div>

                <div class="flex flex-col gap-4 text-sm">
                  <div class="grid grid-cols-2 gap-4 p-4 bg-white/[0.02] rounded-xl border border-white/[0.04]">
                    <div>
                      <span class="block text-xs text-brand-muted mb-1 font-mono uppercase tracking-wider">Achievement</span>
                      <span class="font-medium text-brand-text">{award.achievement}</span>
                    </div>
                    <div>
                      <span class="block text-xs text-brand-muted mb-1 font-mono uppercase tracking-wider">Team Number</span>
                      <span class="font-mono text-brand-text">{award.certificateId}</span>
                    </div>
                    <div>
                      <span class="block text-xs text-brand-muted mb-1 font-mono uppercase tracking-wider">School</span>
                      <span class="text-brand-muted">{award.school}</span>
                    </div>
                    <div>
                      <span class="block text-xs text-brand-muted mb-1 font-mono uppercase tracking-wider">Faculty Advisor</span>
                      <span class="text-brand-muted">{award.advisor}</span>
                    </div>
                  </div>

                  {award.teamMembers && (
                    <div>
                      <h4 class="text-xs font-medium text-brand-muted uppercase tracking-wider mb-3 font-mono">Team Members</h4>
                      <div class="flex flex-wrap gap-2">
                        {award.teamMembers.map(member => (
                          <span class="inline-flex items-center gap-1.5 px-2.5 py-1 bg-white/[0.04] border border-white/[0.06] rounded-md text-brand-muted text-xs">
                            <span class="w-1.5 h-1.5 rounded-full bg-brand-accent/40"></span>
                            {member.name}
                            <span class="text-neutral-600">({member.role})</span>
                          </span>
                        ))}
                      </div>
                    </div>
                  )}
                </div>
              </div>

              <!-- Certificate -->
              <div class="flex flex-col items-center justify-center p-4 bg-white/[0.02] rounded-xl border border-white/[0.04] border-dashed">
                <a
                  href="/certificates/16400.pdf"
                  class="group/cert relative block w-full overflow-hidden rounded-lg bg-brand-surface transition-all hover:scale-[1.02]"
                  aria-label={`View ${award.title} certificate`}
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  <div class="relative w-full aspect-[4/3] overflow-hidden">
                    <object
                      data="/certificates/16400.pdf#toolbar=0&navpanes=0&scrollbar=0&view=FitH"
                      type="application/pdf"
                      class="w-full h-full pointer-events-none"
                    >
                      <div class="absolute inset-0 flex flex-col items-center justify-center text-center p-4">
                        <i class="fa-regular fa-file-pdf text-3xl text-brand-muted mb-2" aria-hidden="true"></i>
                        <span class="text-xs text-brand-muted font-mono">PDF Certificate</span>
                      </div>
                    </object>
                  </div>
                  <div class="absolute inset-0 bg-black/0 group-hover/cert:bg-black/20 transition-colors flex items-center justify-center opacity-0 group-hover/cert:opacity-100">
                    <span class="px-3 py-1.5 bg-brand-bg/80 backdrop-blur text-xs font-medium text-brand-text rounded-full border border-white/[0.1]">
                      View Full Size
                    </span>
                  </div>
                </a>
                <p class="mt-3 text-xs text-center text-neutral-600 font-mono">
                  Administered by COMAP &middot; HiMCM 2025
                </p>
              </div>

            </div>
          </article>
        ))}
      </div>
    </div>
  </div>
  <ImageModal id="certificate-modal" />
  
  <script>
    function setupAwards() {
      const folders = document.querySelectorAll('.award-folder');
      const backButtons = document.querySelectorAll('.back-to-folders');
      const folderContainer = document.getElementById('folder-container');
      const awardContainers = document.querySelectorAll('.award-container');

      const openFolder = (folderId) => {
        if (folderContainer) folderContainer.classList.add('hidden');
        const selectedContainer = document.getElementById('awards-' + folderId);
        if (selectedContainer) {
          selectedContainer.classList.remove('hidden');
          window.scrollTo({ top: 0, behavior: 'smooth' });
        }
      };

      const closeFolder = () => {
        awardContainers.forEach(container => {
          container.classList.add('hidden');
        });
        if (folderContainer) folderContainer.classList.remove('hidden');
        window.scrollTo({ top: 0, behavior: 'smooth' });
      };

      folders.forEach(folder => {
        const newFolder = folder.cloneNode(true);
        folder.parentNode?.replaceChild(newFolder, folder);
        
        newFolder.addEventListener('click', () => {
          const folderId = newFolder.getAttribute('data-folder-id');
          if (folderId) openFolder(folderId);
        });
        
        newFolder.addEventListener('keydown', (e) => {
          if (e.key === 'Enter' || e.key === ' ') {
            e.preventDefault();
            const folderId = newFolder.getAttribute('data-folder-id');
            if (folderId) openFolder(folderId);
          }
        });
      });

      backButtons.forEach(button => {
        const newButton = button.cloneNode(true);
        button.parentNode?.replaceChild(newButton, button);
        
        newButton.addEventListener('click', closeFolder);
        newButton.addEventListener('keydown', (e) => {
          if (e.key === 'Enter' || e.key === ' ') {
            e.preventDefault();
            closeFolder();
          }
        });
      });
    }

    setupAwards();
    document.addEventListener('astro:page-load', setupAwards);
  </script>
</Layout>
