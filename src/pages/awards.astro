---
import Layout from '../layouts/Layout.astro';
import ImageModal from '../components/ImageModal.astro';

const awardCategories = [
  {
    id: 'cnec2025',
    name: 'CNEC2025 Pre division',
    description: 'Achievements in the National Economics Challenge (CNEC) Pre Division 2025',
    awards: [
      {
        title: 'Regional Overall Team Silver Award',
        date: 'December 2025',
        category: 'Team Achievement',
        certificateId: '202503100579',
        achievement: 'Regional Overall Team Silver Award',
        division: 'Pre Division (Entry-Level Division)',
        level: 'NEC Preliminary Level 2025',
        teamMembers: [
          { name: 'Yixuan Cheng', role: 'Team Leader' },
          { name: 'Jacky Xiao', role: 'Team Member' },
          { name: 'Jerry Liu', role: 'Team Member' },
          { name: 'Candy Gond', role: 'Team Member' }
        ]
      },
      {
        title: 'National Top Scoring Individual Gold Award',
        date: 'December 2025',
        category: 'Individual Achievement',
        certificateId: '202503200667',
        achievement: 'National Top Scoring Individual Gold Award',
        division: 'Pre Division (Entry-Level Division)',
        level: 'NEC Preliminary Level 2025',
        score: '330/360'
      },
      {
        title: 'Macroeconomics Hall of Fame',
        date: 'December 2025',
        category: 'Special Recognition',
        certificateId: '202503200703',
        achievement: 'Macroeconomics Hall of Fame',
        division: 'Pre Division (Entry-Level Division)',
        level: 'NEC Preliminary Level 2025',
        criteria: [
          'Outstanding academic performance in macroeconomics',
          'Innovative research contributions',
          'Leadership in economic projects'
        ]
      }
    ]
  }
];

// Client-side JavaScript for folder interaction with keyboard support
// Removed to use inline script for View Transitions compatibility
---

<Layout
  title="Awards - Morax Cheng"
  description="View Morax Cheng's academic achievements and awards, including recognitions from the National Economics Challenge (CNEC) 2025 Pre Division."
>
  <div class="space-y-12 animate-on-scroll">
    <header class="text-center max-w-2xl mx-auto">
      <h1 class="text-3xl md:text-4xl font-serif font-medium text-zinc-900 mb-4">Academic Achievements</h1>
      <p class="text-zinc-500 text-lg leading-relaxed">
        Recognitions and awards from academic competitions.
      </p>
    </header>

    <!-- Folder View (Main View) -->
    <div id="folder-container" class="grid gap-6 md:grid-cols-2 max-w-4xl mx-auto">
      <div 
        class="award-folder group p-6 bg-white border border-zinc-200 rounded-xl cursor-pointer transition-all hover:border-zinc-300 hover:shadow-lg hover:-translate-y-1"
        data-folder-id="cnec2025"
        tabindex="0"
        role="button"
        aria-label="Open CNEC2025 Pre division awards"
      >
        <div class="flex justify-between items-start mb-4">
          <div class="p-2 bg-zinc-50 rounded-lg text-zinc-400 group-hover:text-zinc-600 transition-colors">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z" />
            </svg>
          </div>
          <span class="px-2.5 py-1 bg-zinc-50 text-zinc-600 text-xs rounded-md font-medium border border-zinc-100">
            {awardCategories[0].awards.length} Awards
          </span>
        </div>
        
        <h2 class="text-xl font-medium text-zinc-900 mb-2 group-hover:text-zinc-700 transition-colors">
          {awardCategories[0].name}
        </h2>
        <p class="text-sm text-zinc-500 mb-6 line-clamp-2">
          {awardCategories[0].description}
        </p>
        
        <div class="flex items-center text-sm font-medium text-zinc-400 group-hover:text-zinc-900 transition-colors">
          View Details
          <svg class="ml-1.5 w-4 h-4 transition-transform group-hover:translate-x-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </div>
      </div>
    </div>

    <!-- Individual Award Category Views -->
    <div id="awards-cnec2025" class="award-container hidden space-y-8 max-w-4xl mx-auto fade-in">
        <div class="flex items-center gap-4 pb-6 border-b border-zinc-100">
          <button class="back-to-folders p-2 -ml-2 text-zinc-400 hover:text-zinc-900 hover:bg-zinc-50 rounded-lg transition-all" aria-label="Back to award categories">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
            </svg>
          </button>
          <h2 class="text-2xl font-serif font-medium text-zinc-900">{awardCategories[0].name}</h2>
        </div>
        
        <div class="grid gap-8">
          {awardCategories[0].awards.map((award, index) => (
            <article class="bg-white border border-zinc-200 rounded-2xl overflow-hidden transition-all hover:border-zinc-300 hover:shadow-sm">
              <div class="p-6 md:p-8 grid md:grid-cols-[1fr_300px] gap-8">
                
                <!-- Content -->
                <div class="space-y-6">
                  <div class="space-y-2">
                    <div class="flex flex-wrap gap-3 text-xs font-medium text-zinc-500">
                      <span class="flex items-center gap-1.5">
                        <svg class="w-4 h-4 text-zinc-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                        </svg>
                        {award.date}
                      </span>
                      <span class="w-1 h-1 rounded-full bg-zinc-300 self-center"></span>
                      <span class="flex items-center gap-1.5">
                        <svg class="w-4 h-4 text-zinc-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
                        </svg>
                        {award.category}
                      </span>
                    </div>
                    
                    <h3 class="text-2xl font-medium text-zinc-900 leading-tight">
                      {award.title}
                    </h3>
                  </div>

                  <div class="space-y-4 text-sm">
                    <div class="grid grid-cols-2 gap-4 p-4 bg-zinc-50 rounded-lg border border-zinc-100/50">
                      <div>
                        <span class="block text-xs text-zinc-500 mb-1">Achievement</span>
                        <span class="font-medium text-zinc-900">{award.achievement}</span>
                      </div>
                      <div>
                        <span class="block text-xs text-zinc-500 mb-1">Score</span>
                        <span class="font-medium text-zinc-900">{award.score || 'N/A'}</span>
                      </div>
                      <div>
                        <span class="block text-xs text-zinc-500 mb-1">Division</span>
                        <span class="text-zinc-700">{award.division}</span>
                      </div>
                      <div>
                        <span class="block text-xs text-zinc-500 mb-1">Certificate ID</span>
                        <span class="font-mono text-zinc-600">{award.certificateId}</span>
                      </div>
                    </div>

                    {award.teamMembers && (
                      <div>
                        <h4 class="text-xs font-semibold text-zinc-400 uppercase tracking-wider mb-3">Team Members</h4>
                        <div class="flex flex-wrap gap-2">
                          {award.teamMembers.map(member => (
                            <span class="inline-flex items-center gap-1.5 px-2.5 py-1 bg-white border border-zinc-200 rounded-md text-zinc-600">
                              <span class="w-1.5 h-1.5 rounded-full bg-zinc-300"></span>
                              {member.name}
                              <span class="text-zinc-400 text-xs">({member.role})</span>
                            </span>
                          ))}
                        </div>
                      </div>
                    )}

                    {award.criteria && (
                      <div>
                        <h4 class="text-xs font-semibold text-zinc-400 uppercase tracking-wider mb-2">Criteria</h4>
                        <ul class="space-y-1 text-zinc-600">
                          {award.criteria.map(criterion => (
                            <li class="flex items-start gap-2">
                              <span class="mt-1.5 w-1 h-1 rounded-full bg-zinc-400"></span>
                              <span>{criterion}</span>
                            </li>
                          ))}
                        </ul>
                      </div>
                    )}
                  </div>
                </div>

                <!-- Certificate Image -->
                <div class="flex flex-col items-center justify-center p-4 bg-zinc-50 rounded-xl border border-zinc-100 border-dashed">
                  <a
                    href={`/certificates/cnec-${award.title === 'National Top Scoring Individual Gold Award' ? 3 : award.title === 'Macroeconomics Hall of Fame' ? 2 : 1}.jpg`}
                    data-modal="certificate-modal"
                    class="group relative block w-full overflow-hidden rounded-lg bg-white shadow-sm transition-all hover:shadow-md hover:scale-[1.02]"
                    aria-label={`View ${award.title} certificate`}
                  >
                    <img
                      src={`/certificates/cnec-${award.title === 'National Top Scoring Individual Gold Award' ? 3 : award.title === 'Macroeconomics Hall of Fame' ? 2 : 1}.jpg`}
                      alt={`${award.title} Certificate`}
                      class="w-full h-auto object-contain"
                      loading="lazy"
                    />
                    <div class="absolute inset-0 bg-black/0 group-hover:bg-black/5 transition-colors flex items-center justify-center opacity-0 group-hover:opacity-100">
                      <span class="px-3 py-1.5 bg-white/90 backdrop-blur text-xs font-medium text-zinc-900 rounded-full shadow-sm">
                        View Full Size
                      </span>
                    </div>
                  </a>
                  <p class="mt-3 text-xs text-center text-zinc-400">
                    Issued by CEE Â· CNEC 2025
                  </p>
                </div>

              </div>
            </article>
          ))}
        </div>
      </div>
  </div>
  <ImageModal id="certificate-modal" />
  
  <script>
    function setupAwards() {
      // Get all folder elements
      const folders = document.querySelectorAll('.award-folder');
      const backButtons = document.querySelectorAll('.back-to-folders');
      const folderContainer = document.getElementById('folder-container');
      const awardContainers = document.querySelectorAll('.award-container');

      // Function to open folder
      const openFolder = (folderId) => {
        folderContainer.classList.add('hidden');
        const selectedContainer = document.getElementById('awards-' + folderId);
        if (selectedContainer) {
          selectedContainer.classList.remove('hidden');
          selectedContainer.classList.add('fade-in');
          // Scroll to top smoothly
          window.scrollTo({ top: 0, behavior: 'smooth' });
        }
      };

      // Function to close folder
      const closeFolder = () => {
        awardContainers.forEach(container => {
          container.classList.add('hidden');
        });
        folderContainer.classList.remove('hidden');
        window.scrollTo({ top: 0, behavior: 'smooth' });
      };

      // Add click event to each folder
      folders.forEach(folder => {
        // Clean up old listener if needed, but cloning is safer to wipe them
        const newFolder = folder.cloneNode(true);
        folder.parentNode.replaceChild(newFolder, folder);
        
        newFolder.addEventListener('click', () => {
          const folderId = newFolder.getAttribute('data-folder-id');
          openFolder(folderId);
        });
        
        // Add keyboard support
        newFolder.addEventListener('keydown', (e) => {
          if (e.key === 'Enter' || e.key === ' ') {
            e.preventDefault();
            const folderId = newFolder.getAttribute('data-folder-id');
            openFolder(folderId);
          }
        });
      });

      // Add click event to back buttons
      backButtons.forEach(button => {
        const newButton = button.cloneNode(true);
        button.parentNode.replaceChild(newButton, button);
        
        newButton.addEventListener('click', closeFolder);
        
        // Add keyboard support
        newButton.addEventListener('keydown', (e) => {
          if (e.key === 'Enter' || e.key === ' ') {
            e.preventDefault();
            closeFolder();
          }
        });
      });
    }

    // Initial load
    setupAwards();

    // View Transitions
    document.addEventListener('astro:page-load', setupAwards);
  </script>
</Layout>
