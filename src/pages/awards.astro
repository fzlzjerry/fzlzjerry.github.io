---
import Layout from '../layouts/Layout.astro';
import ImageModal from '../components/ImageModal.astro';

const awards = [
  {
    title: 'Regional Overall Team Silver Award',
    date: 'December 2025',
    category: 'Team Achievement',
    certificateId: '202503100579',
    achievement: 'Regional Overall Team Silver Award',
    division: 'Pre Division (Entry-Level Division)',
    level: 'NEC Preliminary Level 2025',
    teamMembers: [
      { name: 'Yixuan Cheng', role: 'Team Leader' },
      { name: 'Jacky Xiao', role: 'Team Member' },
      { name: 'Jerry Liu', role: 'Team Member' },
      { name: 'Candy Gond', role: 'Team Member' }
    ]
  },
  {
    title: 'National Top Scoring Individual Gold Award',
    date: 'December 2025',
    category: 'Individual Achievement',
    certificateId: '202503200667',
    achievement: 'National Top Scoring Individual Gold Award',
    division: 'Pre Division (Entry-Level Division)',
    level: 'NEC Preliminary Level 2025',
    score: '330/360'
  },
  {
    title: 'Macroeconomics Hall of Fame',
    date: 'December 2025',
    category: 'Special Recognition',
    certificateId: '202503200703',
    achievement: 'Macroeconomics Hall of Fame',
    division: 'Pre Division (Entry-Level Division)',
    level: 'NEC Preliminary Level 2025',
    criteria: [
      'Outstanding academic performance in macroeconomics',
      'Innovative research contributions',
      'Leadership in economic projects'
    ]
  }
];
---

<Layout title="Awards - Morax Cheng">
  <div class="space-y-12">
    <header class="text-center">
      <h1 class="text-3xl font-bold mb-4">Academic Achievements</h1>
      <p class="text-gray-600 dark:text-gray-300 max-w-2xl mx-auto">
        Recognitions from the National Economics Challenge (CNEC), showcasing excellence in economics and leadership.
      </p>
    </header>

    <div class="grid gap-8 md:gap-12">
      {awards.map((award, index) => (
        <div class="border dark:border-gray-800 rounded-lg overflow-hidden">
          <div class="bg-gradient-to-r from-blue-600 to-blue-800 p-6 text-white">
            <div class="flex justify-between items-start">
              <h2 class="text-2xl font-bold">{award.title}</h2>
              <span class="px-3 py-1 bg-white/20 rounded-full text-sm">
                {award.category}
              </span>
            </div>
            <time class="text-blue-100 text-sm mt-2 block">{award.date}</time>
          </div>

          <div class="p-6 space-y-6">
            <div class="grid grid-cols-[1fr_200px] gap-6">
              <div class="grid gap-4">
              <div>
                <h3 class="font-semibold text-gray-900 dark:text-gray-100">Achievement Details</h3>
                <p class="text-gray-600 dark:text-gray-300">{award.achievement}</p>
              </div>
              <div>
                <h3 class="font-semibold text-gray-900 dark:text-gray-100">Division & Level</h3>
                <p class="text-gray-600 dark:text-gray-300">{award.division} • {award.level}</p>
              </div>
              <div>
                <h3 class="font-semibold text-gray-900 dark:text-gray-100">Certificate ID</h3>
                <p class="text-gray-600 dark:text-gray-300">{award.certificateId}</p>
              </div>

              {award.teamMembers && (
                <div>
                  <h3 class="font-semibold text-gray-900 dark:text-gray-100 mb-2">Team Members</h3>
                  <ul class="grid gap-2">
                    {award.teamMembers.map(member => (
                      <li class="flex items-center gap-2">
                        <span class="w-2 h-2 bg-blue-500 rounded-full"></span>
                        <span class="font-medium">{member.name}</span>
                        <span class="text-gray-500 dark:text-gray-400">• {member.role}</span>
                      </li>
                    ))}
                  </ul>
                </div>
              )}

              {award.score && (
                <div>
                  <h3 class="font-semibold text-gray-900 dark:text-gray-100">Performance</h3>
                  <p class="text-gray-600 dark:text-gray-300">Score: {award.score}</p>
                </div>
              )}

              {award.criteria && (
                <div>
                  <h3 class="font-semibold text-gray-900 dark:text-gray-100 mb-2">Achievement Criteria</h3>
                  <ul class="space-y-2">
                    {award.criteria.map(criterion => (
                      <li class="flex items-center gap-2">
                        <svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                        </svg>
                        <span class="text-gray-600 dark:text-gray-300">{criterion}</span>
                      </li>
                    ))}
                  </ul>
                </div>
              )}
              </div>
              <a
                href={`/certificates/cnec-${index + 1}.jpg`}
                data-modal="certificate-modal"
                class="block hover:opacity-90 transition-opacity p-4 bg-gray-50 dark:bg-gray-800/50 rounded-lg h-[200px]"
              >
                <img
                  src={`/certificates/cnec-${index + 1}.jpg`}
                  alt={`${award.title} Certificate`}
                  class="w-full h-full object-contain"
                  loading="lazy"
                />
              </a>
            </div>

            <div class="pt-4 border-t dark:border-gray-800">
              <p class="text-sm text-gray-500 dark:text-gray-400">
                Awarded by CEE, based on the relevant regulations and final results of CNEC National Round through GP21
              </p>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
  <ImageModal id="certificate-modal" />
</Layout>