---
import Layout from '../layouts/Layout.astro';
import ImageModal from '../components/ImageModal.astro';

const awardCategories = [
  {
    id: 'cnec2025',
    name: 'CNEC2025 Pre division',
    description: 'Achievements in the National Economics Challenge (CNEC) Pre Division 2025',
    awards: [
      {
        title: 'Regional Overall Team Silver Award',
        date: 'December 2025',
        category: 'Team Achievement',
        certificateId: '202503100579',
        achievement: 'Regional Overall Team Silver Award',
        division: 'Pre Division (Entry-Level Division)',
        level: 'NEC Preliminary Level 2025',
        teamMembers: [
          { name: 'Yixuan Cheng', role: 'Team Leader' },
          { name: 'Jacky Xiao', role: 'Team Member' },
          { name: 'Jerry Liu', role: 'Team Member' },
          { name: 'Candy Gond', role: 'Team Member' }
        ]
      },
      {
        title: 'National Top Scoring Individual Gold Award',
        date: 'December 2025',
        category: 'Individual Achievement',
        certificateId: '202503200667',
        achievement: 'National Top Scoring Individual Gold Award',
        division: 'Pre Division (Entry-Level Division)',
        level: 'NEC Preliminary Level 2025',
        score: '330/360'
      },
      {
        title: 'Macroeconomics Hall of Fame',
        date: 'December 2025',
        category: 'Special Recognition',
        certificateId: '202503200703',
        achievement: 'Macroeconomics Hall of Fame',
        division: 'Pre Division (Entry-Level Division)',
        level: 'NEC Preliminary Level 2025',
        criteria: [
          'Outstanding academic performance in macroeconomics',
          'Innovative research contributions',
          'Leadership in economic projects'
        ]
      }
    ]
  }
];

// Client-side JavaScript for folder interaction
const folderScript = `
document.addEventListener('DOMContentLoaded', () => {
  // Get all folder elements
  const folders = document.querySelectorAll('.award-folder');
  const backButtons = document.querySelectorAll('.back-to-folders');
  const folderContainer = document.getElementById('folder-container');
  const awardContainers = document.querySelectorAll('.award-container');

  // Add click event to each folder
  folders.forEach(folder => {
    folder.addEventListener('click', () => {
      const folderId = folder.getAttribute('data-folder-id');
      
      // Hide all folders
      folderContainer.classList.add('hidden');
      
      // Show the selected award container
      const selectedContainer = document.getElementById('awards-' + folderId);
      if (selectedContainer) {
        selectedContainer.classList.remove('hidden');
      }
    });
  });

  // Add click event to back buttons
  backButtons.forEach(button => {
    button.addEventListener('click', () => {
      // Hide all award containers
      awardContainers.forEach(container => {
        container.classList.add('hidden');
      });
      
      // Show the folder container
      folderContainer.classList.remove('hidden');
    });
  });
});
`;
---

<Layout
  title="Awards - Morax Cheng"
  description="View Morax Cheng's academic achievements and awards, including recognitions from the National Economics Challenge (CNEC) 2025 Pre Division like the Regional Team Silver Award and National Individual Gold Award."
>
  <div class="max-w-4xl mx-auto space-y-8">
    <header class="awards-header">
      <h1 class="text-4xl md:text-5xl mb-4 text-center md:text-left" style="font-weight: 300; letter-spacing: 0.05em;">Academic Achievements</h1>
      <div class="border-b-2 mb-6" style="border-color: var(--border-light); width: 120px;"></div>
      <p class="text-lg md:text-xl text-center md:text-left" style="color: var(--text-muted-light);">
        Explore my academic awards and recognitions from various competitions.
      </p>
    </header>

    <!-- Folder View (Main View) -->
    <div id="folder-container" class="grid gap-6">
      <div 
        class="award-folder border-2 rounded-xl p-8 md:p-10 cursor-pointer interactive-element hover:shadow-lg transition-all duration-300 group"
        style="border-color: var(--border-light); background: linear-gradient(135deg, var(--primary-light) 0%, var(--accent-light) 100%);"
        data-folder-id="cnec2025"
      >
        <div class="flex items-center gap-4 mb-6">
          <div class="folder-icon" style="font-size: 2.5rem; opacity: 0.7;">üìÅ</div>
          <div class="flex-1">
            <div class="flex flex-col md:flex-row md:justify-between md:items-start gap-3">
              <h2 class="text-2xl md:text-3xl" style="font-weight: 400; letter-spacing: 0.02em;">{awardCategories[0].name}</h2>
              <span class="unified-tag">
                {awardCategories[0].awards.length} Awards
              </span>
            </div>
          </div>
        </div>
        <p class="mb-6 text-lg" style="color: var(--text-muted-light); text-align: left; line-height: 1.7;">{awardCategories[0].description}</p>
        <div class="inline-flex items-center text-base group-hover:underline view-details-btn" style="color: var(--text-muted-light); font-weight: 500;">
          View Details
          <svg class="ml-2 w-5 h-5 transition-transform group-hover:translate-x-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </div>
      </div>
    </div>

    <!-- Individual Award Category Views -->
    <div id="awards-cnec2025" class="award-container hidden space-y-8">
        <div class="mb-8">
          <button class="back-to-folders flex items-center gap-2 mb-6 px-4 py-2 border rounded-lg transition-all" style="color: var(--text-light); border-color: var(--border-light); text-decoration: none;">
            <svg class="w-5 h-5 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
            </svg>
            Back to Categories
          </button>
          <h2 class="text-3xl md:text-4xl mb-4" style="font-weight: 300; letter-spacing: 0.05em;">{awardCategories[0].name}</h2>
          <div class="border-b-2" style="border-color: var(--border-light); width: 100px;"></div>
        </div>
        
        <div class="grid gap-8">
          {awardCategories[0].awards.map((award, index) => (
            <article class="award-detail border-2 rounded-xl p-8 md:p-10 interactive-element hover:shadow-lg transition-all duration-300" style="border-color: var(--border-light); background: linear-gradient(to bottom right, var(--primary-light), var(--accent-light));">
              <div class="flex items-center gap-3 mb-6">
                <div class="award-badge" style="font-size: 2rem;">üèÜ</div>
                <div class="award-number" style="color: var(--text-muted-light); font-size: 1.5rem; font-weight: 300; opacity: 0.5;">0{index + 1}</div>
              </div>
              <div class="flex flex-col md:flex-row md:justify-between md:items-start gap-4 mb-6">
                <div>
                  <h3 class="text-xl md:text-2xl mb-2" style="font-weight: 400; letter-spacing: 0.02em;">{award.title}</h3>
                  <div class="flex flex-wrap gap-4 text-sm" style="color: var(--text-muted-light);">
                    <time datetime={award.date} class="inline-flex items-center">
                      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                      </svg>
                      {award.date}
                    </time>
                    <span class="inline-flex items-center">
                      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
                      </svg>
                      {award.category}
                    </span>
                  </div>
                </div>
              </div>

              <div class="space-y-6">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                  <div class="space-y-4">
                    <div>
                      <h4 class="text-sm mb-2" style="color: var(--text-light); font-weight: 500;">Achievement</h4>
                      <p style="color: var(--text-muted-light); text-align: left;">{award.achievement}</p>
                    </div>
                    <div>
                      <h4 class="text-sm mb-2" style="color: var(--text-light); font-weight: 500;">Division</h4>
                      <p style="color: var(--text-muted-light);">{award.division}</p>
                    </div>
                    <div>
                      <h4 class="text-sm mb-2" style="color: var(--text-light); font-weight: 500;">Level</h4>
                      <p style="color: var(--text-muted-light);">{award.level}</p>
                    </div>
                    <div>
                      <h4 class="text-sm mb-2" style="color: var(--text-light); font-weight: 500;">Certificate ID</h4>
                      <code class="text-sm" style="color: var(--text-muted-light); font-family: monospace;">{award.certificateId}</code>
                    </div>

                    {award.teamMembers && (
                      <div>
                        <h4 class="text-sm mb-3" style="color: var(--text-light); font-weight: 500;">Team Members</h4>
                        <div class="space-y-2">
                          {award.teamMembers.map(member => (
                            <div class="text-sm">
                              <span style="font-weight: 500;">{member.name}</span>
                              <span style="color: var(--text-muted-light);"> ¬∑ {member.role}</span>
                            </div>
                          ))}
                        </div>
                      </div>
                    )}

                    {award.score && (
                      <div>
                        <h4 class="text-sm mb-2" style="color: var(--text-light); font-weight: 500;">Performance Score</h4>
                        <p class="text-lg" style="font-weight: 500;">{award.score}</p>
                      </div>
                    )}

                    {award.criteria && (
                      <div>
                        <h4 class="text-sm mb-3" style="color: var(--text-light); font-weight: 500;">Achievement Criteria</h4>
                        <ul class="space-y-1 text-sm" style="color: var(--text-muted-light);">
                          {award.criteria.map(criterion => (
                            <li class="flex items-start gap-2">
                              <span style="color: var(--text-light);">‚Ä¢</span>
                              <span>{criterion}</span>
                            </li>
                          ))}
                        </ul>
                      </div>
                    )}
                  </div>
                  <div>
                    <h4 class="text-sm mb-3" style="color: var(--text-light); font-weight: 500;">Certificate</h4>
                    <a
                      href={`/certificates/cnec-${award.title === 'National Top Scoring Individual Gold Award' ? 3 : award.title === 'Macroeconomics Hall of Fame' ? 2 : 1}.jpg`}
                      data-modal="certificate-modal"
                      class="block p-4 rounded border hover:shadow-md transition-all"
                      style="background-color: var(--accent-light); border-color: var(--border-light);"
                    >
                      <img
                        src={`/certificates/cnec-${award.title === 'National Top Scoring Individual Gold Award' ? 3 : award.title === 'Macroeconomics Hall of Fame' ? 2 : 1}.jpg`}
                        alt={`${award.title} Certificate`}
                        class="w-full h-auto object-contain"
                        loading="lazy"
                        style="max-height: 200px;"
                      />
                    </a>
                    <p class="text-center mt-2 text-xs" style="color: var(--text-muted-light);">Click to view full size</p>
                  </div>
                </div>

                <div class="mt-6 pt-4 border-t text-sm" style="border-color: var(--border-light); color: var(--text-muted-light);">
                  Awarded by CEE, based on the relevant regulations and final results of CNEC National Round through GP21
                </div>
              </div>
            </article>
          ))}
        </div>
      </div>
  </div>
  <ImageModal id="certificate-modal" />
  <script set:html={folderScript}></script>
  
</Layout>

<style>
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  @keyframes pulse {
    0%, 100% {
      opacity: 1;
    }
    50% {
      opacity: 0.7;
    }
  }
  
  .awards-header {
    animation: fadeInUp 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  .award-folder {
    position: relative;
    overflow: hidden;
    animation: fadeInUp 0.6s cubic-bezier(0.4, 0, 0.2, 1) 0.2s backwards;
  }
  
  .award-folder::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
    transition: left 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  .award-folder:hover::before {
    left: 100%;
  }
  
  .award-folder:hover {
    border-color: var(--text-muted-light) !important;
    transform: translateY(-5px);
  }
  
  .folder-icon {
    transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  .award-folder:hover .folder-icon {
    transform: scale(1.1) rotate(-5deg);
  }
  
  .view-details-btn {
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  .award-detail {
    animation: fadeInUp 0.6s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
  }
  
  .award-detail::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: left 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  .award-detail:hover::before {
    left: 100%;
  }
  
  .award-detail:hover {
    border-color: var(--text-muted-light);
  }
  
  .award-badge {
    animation: pulse 2s ease-in-out infinite;
  }
  
  .award-number {
    font-family: Georgia, 'Times New Roman', Times, serif;
    line-height: 1;
  }
  
  .back-to-folders {
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  .back-to-folders:hover {
    background-color: var(--text-light);
    color: var(--primary-light) !important;
    border-color: var(--text-light);
    transform: translateX(-5px);
  }
  
  .back-to-folders:hover svg {
    transform: translateX(-3px);
  }
  
  /* Certificate hover effect */
  a[data-modal="certificate-modal"] {
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  a[data-modal="certificate-modal"]:hover {
    transform: translateY(-5px);
    box-shadow: var(--shadow-lg);
  }
  
  /* Prevent layout shift during hover animations */
  article {
    transform: translateZ(0);
    backface-visibility: hidden;
  }
</style>