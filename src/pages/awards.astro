---
import Layout from '../layouts/Layout.astro';
import ImageModal from '../components/ImageModal.astro';

const awardCategories = [
  {
    id: 'cnec2025',
    name: 'CNEC2025 Pre division',
    description: 'Achievements in the National Economics Challenge (CNEC) Pre Division 2025',
    awards: [
      {
        title: 'Regional Overall Team Silver Award',
        date: 'December 2025',
        category: 'Team Achievement',
        certificateId: '202503100579',
        achievement: 'Regional Overall Team Silver Award',
        division: 'Pre Division (Entry-Level Division)',
        level: 'NEC Preliminary Level 2025',
        teamMembers: [
          { name: 'Yixuan Cheng', role: 'Team Leader' },
          { name: 'Jacky Xiao', role: 'Team Member' },
          { name: 'Jerry Liu', role: 'Team Member' },
          { name: 'Candy Gond', role: 'Team Member' }
        ]
      },
      {
        title: 'National Top Scoring Individual Gold Award',
        date: 'December 2025',
        category: 'Individual Achievement',
        certificateId: '202503200667',
        achievement: 'National Top Scoring Individual Gold Award',
        division: 'Pre Division (Entry-Level Division)',
        level: 'NEC Preliminary Level 2025',
        score: '330/360'
      },
      {
        title: 'Macroeconomics Hall of Fame',
        date: 'December 2025',
        category: 'Special Recognition',
        certificateId: '202503200703',
        achievement: 'Macroeconomics Hall of Fame',
        division: 'Pre Division (Entry-Level Division)',
        level: 'NEC Preliminary Level 2025',
        criteria: [
          'Outstanding academic performance in macroeconomics',
          'Innovative research contributions',
          'Leadership in economic projects'
        ]
      }
    ]
  }
];

// Client-side JavaScript for folder interaction with keyboard support
const folderScript = `
document.addEventListener('DOMContentLoaded', () => {
  // Get all folder elements
  const folders = document.querySelectorAll('.award-folder');
  const backButtons = document.querySelectorAll('.back-to-folders');
  const folderContainer = document.getElementById('folder-container');
  const awardContainers = document.querySelectorAll('.award-container');

  // Function to open folder
  const openFolder = (folderId) => {
    folderContainer.classList.add('hidden');
    const selectedContainer = document.getElementById('awards-' + folderId);
    if (selectedContainer) {
      selectedContainer.classList.remove('hidden');
      selectedContainer.classList.add('fade-in');
      // Scroll to top smoothly
      window.scrollTo({ top: 0, behavior: 'smooth' });
    }
  };

  // Function to close folder
  const closeFolder = () => {
    awardContainers.forEach(container => {
      container.classList.add('hidden');
    });
    folderContainer.classList.remove('hidden');
    window.scrollTo({ top: 0, behavior: 'smooth' });
  };

  // Add click event to each folder
  folders.forEach(folder => {
    folder.addEventListener('click', () => {
      const folderId = folder.getAttribute('data-folder-id');
      openFolder(folderId);
    });
    
    // Add keyboard support
    folder.addEventListener('keydown', (e) => {
      if (e.key === 'Enter' || e.key === ' ') {
        e.preventDefault();
        const folderId = folder.getAttribute('data-folder-id');
        openFolder(folderId);
      }
    });
  });

  // Add click event to back buttons
  backButtons.forEach(button => {
    button.addEventListener('click', closeFolder);
    
    // Add keyboard support
    button.addEventListener('keydown', (e) => {
      if (e.key === 'Enter' || e.key === ' ') {
        e.preventDefault();
        closeFolder();
      }
    });
  });
});
`;
---

<Layout
  title="Awards - Morax Cheng"
  description="View Morax Cheng's academic achievements and awards, including recognitions from the National Economics Challenge (CNEC) 2025 Pre Division like the Regional Team Silver Award and National Individual Gold Award."
>
  <div class="max-w-4xl mx-auto space-y-6 md:space-y-8">
    <header class="px-4">
      <h1 class="text-2xl md:text-3xl text-center md:text-left" style="font-weight: 300; letter-spacing: 0.05em; border-bottom: 1px solid var(--border-light); padding-bottom: 0.5rem;">Academic Achievements</h1>
      <p class="mt-4 text-sm md:text-base text-center md:text-left" style="color: var(--text-muted-light);">
        Explore my academic awards and recognitions from various competitions.
      </p>
    </header>

    <!-- Folder View (Main View) -->
    <div id="folder-container" class="grid gap-4 md:gap-6 px-4">
      <div 
        class="award-folder border rounded p-4 md:p-6 cursor-pointer interactive-element transition-all group"
        style="border-color: var(--border-light);"
        data-folder-id="cnec2025"
        tabindex="0"
        role="button"
        aria-label="Open CNEC2025 Pre division awards"
      >
        <div class="flex flex-col sm:flex-row sm:justify-between sm:items-start gap-3 mb-4">
          <h2 class="text-lg md:text-xl lg:text-2xl" style="font-weight: 400; letter-spacing: 0.02em; color: var(--text-light);">{awardCategories[0].name}</h2>
          <span class="unified-tag text-xs self-start">
            {awardCategories[0].awards.length} Awards
          </span>
        </div>
        <p class="mb-4 text-sm md:text-base" style="color: var(--text-muted-light); text-align: left;">{awardCategories[0].description}</p>
        <div class="inline-flex items-center text-xs md:text-sm group-hover:underline transition-all" style="color: var(--text-muted-light);">
          View Details
          <svg class="ml-1 w-3 h-3 md:w-4 md:h-4 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </div>
      </div>
    </div>

    <!-- Individual Award Category Views -->
    <div id="awards-cnec2025" class="award-container hidden space-y-6 md:space-y-8 fade-in">
        <div class="mb-6 px-4">
          <button class="back-to-folders flex items-center mb-4 transition-all text-sm md:text-base" style="color: var(--text-muted-light); text-decoration: underline; text-decoration-thickness: 1px; text-underline-offset: 0.2em;" aria-label="Back to award categories">
            <svg class="mr-1 w-4 h-4 md:w-5 md:h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
            </svg>
            Back to Categories
          </button>
          <h2 class="text-xl md:text-2xl" style="font-weight: 300; letter-spacing: 0.05em; border-bottom: 1px solid var(--border-light); padding-bottom: 0.5rem;">{awardCategories[0].name}</h2>
        </div>
        
        <div class="grid gap-6 md:gap-8 px-4">
          {awardCategories[0].awards.map((award, index) => (
            <article class="border rounded p-4 md:p-6 interactive-element transition-all" style="border-color: var(--border-light);">
              <div class="flex flex-col sm:flex-row sm:justify-between sm:items-start gap-3 mb-4">
                <div>
                  <h3 class="text-lg md:text-xl lg:text-2xl mb-2" style="font-weight: 400; letter-spacing: 0.02em; color: var(--text-light);">{award.title}</h3>
                  <div class="flex flex-col sm:flex-row sm:flex-wrap gap-2 sm:gap-4 text-xs md:text-sm" style="color: var(--text-muted-light);">
                    <time datetime={award.date} class="inline-flex items-center">
                      <svg class="w-3 h-3 md:w-4 md:h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                      </svg>
                      {award.date}
                    </time>
                    <span class="inline-flex items-center">
                      <svg class="w-3 h-3 md:w-4 md:h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
                      </svg>
                      {award.category}
                    </span>
                  </div>
                </div>
              </div>

              <div class="space-y-6">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                  <div class="space-y-4">
                    <div>
                      <h4 class="text-sm mb-2" style="color: var(--text-light); font-weight: 500;">Achievement</h4>
                      <p style="color: var(--text-muted-light); text-align: left;">{award.achievement}</p>
                    </div>
                    <div>
                      <h4 class="text-sm mb-2" style="color: var(--text-light); font-weight: 500;">Division</h4>
                      <p style="color: var(--text-muted-light);">{award.division}</p>
                    </div>
                    <div>
                      <h4 class="text-sm mb-2" style="color: var(--text-light); font-weight: 500;">Level</h4>
                      <p style="color: var(--text-muted-light);">{award.level}</p>
                    </div>
                    <div>
                      <h4 class="text-sm mb-2" style="color: var(--text-light); font-weight: 500;">Certificate ID</h4>
                      <code class="text-sm" style="color: var(--text-muted-light); font-family: monospace;">{award.certificateId}</code>
                    </div>

                    {award.teamMembers && (
                      <div>
                        <h4 class="text-sm mb-3" style="color: var(--text-light); font-weight: 500;">Team Members</h4>
                        <div class="space-y-2">
                          {award.teamMembers.map(member => (
                            <div class="text-sm">
                              <span style="font-weight: 500;">{member.name}</span>
                              <span style="color: var(--text-muted-light);"> · {member.role}</span>
                            </div>
                          ))}
                        </div>
                      </div>
                    )}

                    {award.score && (
                      <div>
                        <h4 class="text-sm mb-2" style="color: var(--text-light); font-weight: 500;">Performance Score</h4>
                        <p class="text-lg" style="font-weight: 500;">{award.score}</p>
                      </div>
                    )}

                    {award.criteria && (
                      <div>
                        <h4 class="text-sm mb-3" style="color: var(--text-light); font-weight: 500;">Achievement Criteria</h4>
                        <ul class="space-y-1 text-sm" style="color: var(--text-muted-light);">
                          {award.criteria.map(criterion => (
                            <li class="flex items-start gap-2">
                              <span style="color: var(--text-light);">•</span>
                              <span>{criterion}</span>
                            </li>
                          ))}
                        </ul>
                      </div>
                    )}
                  </div>
                  <div>
                    <h4 class="text-xs md:text-sm mb-3" style="color: var(--text-light); font-weight: 500;">Certificate</h4>
                    <a
                      href={`/certificates/cnec-${award.title === 'National Top Scoring Individual Gold Award' ? 3 : award.title === 'Macroeconomics Hall of Fame' ? 2 : 1}.jpg`}
                      data-modal="certificate-modal"
                      class="certificate-link block p-3 md:p-4 rounded border hover:shadow-lg transition-all"
                      style="background-color: var(--accent-light); border-color: var(--border-light);"
                      aria-label={`View ${award.title} certificate`}
                    >
                      <img
                        src={`/certificates/cnec-${award.title === 'National Top Scoring Individual Gold Award' ? 3 : award.title === 'Macroeconomics Hall of Fame' ? 2 : 1}.jpg`}
                        alt={`${award.title} Certificate`}
                        class="w-full h-auto object-contain transition-opacity"
                        loading="lazy"
                        style="max-height: 200px;"
                      />
                    </a>
                    <p class="text-center mt-2 text-[10px] md:text-xs" style="color: var(--text-muted-light);">Click to view full size</p>
                  </div>
                </div>

                <div class="mt-6 pt-4 border-t text-sm" style="border-color: var(--border-light); color: var(--text-muted-light);">
                  Awarded by CEE, based on the relevant regulations and final results of CNEC National Round through GP21
                </div>
              </div>
            </article>
          ))}
        </div>
      </div>
  </div>
  <ImageModal id="certificate-modal" />
  <script set:html={folderScript}></script>
  
</Layout>

<style>
  /* Ensure smooth transitions */
  .transition-all {
    transition-property: all;
    transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  /* Prevent layout shift during hover animations */
  article {
    transform: translateZ(0);
    backface-visibility: hidden;
  }
  
  /* Certificate hover effect */
  .certificate-link {
    cursor: pointer;
  }
  
  .certificate-link:hover {
    transform: translateY(-2px);
    border-color: var(--text-muted-light) !important;
  }
  
  .certificate-link:focus-visible {
    outline: 2px solid var(--text-light);
    outline-offset: 2px;
  }
  
  /* Folder hover effect */
  .award-folder:hover {
    cursor: pointer;
  }
  
  .award-folder:focus-visible {
    outline: 2px solid var(--text-light);
    outline-offset: 2px;
  }
  
  /* Back button hover effect */
  .back-to-folders:hover {
    color: var(--text-light) !important;
  }
  
  .back-to-folders:hover svg {
    transform: translateX(-2px);
  }
</style>