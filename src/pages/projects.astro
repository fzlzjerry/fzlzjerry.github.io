---
import Layout from '../layouts/Layout.astro';

const projects = [
  {
    title: 'Windows 12 Web',
    description: 'A web-based Windows 12 concept UI implementation with modern web technologies. Features a realistic Windows-like interface, multiple windows management, and various system apps.',
    tech: ['Html', 'CSS', 'JS'],
    github: 'https://github.com/tjy-gitnub/win12',
    image: '/projects/win12.png',
    featured: true
  },
  {
    title: 'Graphing Calculator',
    description: 'A powerful graphing calculator built with Python and Qt, featuring intuitive UI and advanced mathematical functions.',
    tech: ['Python', 'Qt'],
    github: 'https://github.com/fzlzjerry/graphing_calculator',
    image: '/projects/calculator.png',
    featured: false
  }
];
---

<Layout
  title="Projects - Morax Cheng"
  description="Explore the projects developed by Morax Cheng, including 'Windows 12 Web' (HTML, CSS, JS) and a 'Graphing Calculator' (Python, Qt). View code on GitHub and see his development skills in action."
>
  <div class="max-w-3xl mx-auto">
    <!-- Page Header -->
    <header class="py-12 md:py-20 reveal">
      <h1 class="text-3xl md:text-4xl font-serif font-medium text-brand-text mb-4 text-balance">My Projects</h1>
      <p class="text-brand-muted text-lg leading-relaxed max-w-xl text-pretty">
        A collection of open-source projects and experiments. From web applications to desktop software.
      </p>
    </header>

    <!-- Divider -->
    <div class="h-px bg-gradient-to-r from-white/[0.06] via-white/[0.06] to-transparent mb-10" aria-hidden="true"></div>
  
    <!-- Project Cards -->
    <div class="flex flex-col gap-6">
      {projects.map((project, i) => (
        <article class={`group glass-card overflow-hidden hover-lift reveal stagger-${i + 1}`}>
          <!-- Featured badge -->
          {project.featured && (
            <div class="px-6 pt-5 pb-0">
              <span class="inline-flex items-center gap-1.5 px-2.5 py-1 text-xs font-medium text-brand-accent bg-brand-accent/[0.08] rounded-md">
                <i class="fa-solid fa-star text-[10px]" aria-hidden="true"></i>
                Featured
              </span>
            </div>
          )}
          
          <div class="p-6 flex flex-col">
            <div class="flex justify-between items-start gap-3 mb-3">
              <h2 class="text-xl font-medium text-brand-text font-serif group-hover:text-brand-accent transition-colors duration-smooth">
                {project.title}
              </h2>
            </div>
            
            <p class="text-brand-muted text-sm mb-6 leading-relaxed line-clamp-4">
              {project.description}
            </p>
            
            <div class="flex items-center justify-between gap-4 mt-auto pt-5 border-t border-white/[0.04]">
              <div class="flex flex-wrap gap-2">
                {project.tech.map(tech => (
                  <span class="inline-flex items-center px-2.5 py-1 bg-white/[0.04] text-brand-muted text-xs rounded-md font-mono">
                    {tech}
                  </span>
                ))}
              </div>
              
              <a 
                href={project.github}
                class="group/link shrink-0 inline-flex items-center gap-2 text-sm font-medium text-brand-muted hover:text-brand-accent transition-colors duration-fast"
                target="_blank"
                rel="noopener noreferrer"
              >
                <i class="fa-brands fa-github text-base" aria-hidden="true"></i>
                <span>Source</span>
                <i class="fa-solid fa-arrow-up-right text-xs opacity-0 group-hover/link:opacity-100 transition-opacity duration-fast" aria-hidden="true"></i>
              </a>
            </div>
          </div>
        </article>
      ))}
    </div>
  </div>
</Layout>
