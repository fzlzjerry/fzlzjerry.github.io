---
import Layout from '../layouts/Layout.astro';

const projects = [
  {
    title: 'Windows 12 Web',
    description: 'A web-based Windows 12 concept UI implementation with modern web technologies. Features a realistic Windows-like interface, multiple windows management, and various system apps.',
    tech: ['Html', 'CSS', 'JS'],
    github: 'https://github.com/tjy-gitnub/win12',
    image: '/projects/win12.png',
    featured: true
  },
  {
    title: 'Graphing Calculator',
    description: 'A powerful graphing calculator built with Python and Qt, featuring intuitive UI and advanced mathematical functions.',
    tech: ['Python', 'Qt'],
    github: 'https://github.com/fzlzjerry/graphing_calculator',
    image: '/projects/calculator.png',
    featured: false
  }
];
---

<Layout
  title="Projects - Morax Cheng"
  description="Explore the projects developed by Morax Cheng, including 'Windows 12 Web' (HTML, CSS, JS) and a 'Graphing Calculator' (Python, Qt). View code on GitHub and see his development skills in action."
>
  <div class="space-y-12 animate-fade-up">
    <div class="text-center">
      <h1 class="text-4xl md:text-5xl font-bold mb-4 bg-gradient-to-r from-blue-500 via-indigo-600 to-purple-600 bg-clip-text text-transparent">
        My Projects
      </h1>
      <p class="text-gray-600 max-w-2xl mx-auto">
        Exploring the intersection of technology and creativity through code
      </p>
    </div>
  
    <div class="grid gap-8 max-w-5xl mx-auto">
      {projects.map((project, index) => (
        <div 
          class={`group relative bg-white rounded-2xl shadow-lg hover:shadow-2xl transform hover:-translate-y-2 transition-all duration-300 overflow-hidden ${project.featured ? 'ring-2 ring-blue-500/20' : ''}`}
          style={`animation: fadeUp 0.6s ease-out ${index * 0.2}s forwards; opacity: 0`}
        >
          {project.featured && (
            <div class="absolute top-0 right-0 bg-gradient-to-r from-blue-500 to-indigo-600 text-white px-4 py-1 rounded-bl-xl text-xs font-semibold uppercase tracking-wider">
              Featured
            </div>
          )}
          
          <!-- Animated gradient background -->
          <div class="absolute inset-0 bg-gradient-to-br from-blue-500/5 via-indigo-600/5 to-purple-500/5 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
          
          <!-- Content -->
          <div class="relative z-10 p-8">
            <h2 class="text-2xl font-bold text-gray-800 mb-4 group-hover:text-blue-600 transition-colors duration-300">
              {project.title}
            </h2>
            
            <p class="text-gray-600 mb-6 leading-relaxed">
              {project.description}
            </p>
            
            <!-- Tech stack badges -->
            <div class="flex flex-wrap gap-2 mb-6">
              {project.tech.map(tech => (
                <span class="px-4 py-2 bg-gradient-to-r from-blue-500/10 to-indigo-600/10 text-gray-700 rounded-full text-sm font-medium hover:from-blue-500/20 hover:to-indigo-600/20 transition-all duration-300">
                  {tech}
                </span>
              ))}
            </div>
            
            <!-- GitHub link with enhanced styling -->
            <a 
              href={project.github}
              class="inline-flex items-center gap-2 px-6 py-3 bg-gradient-to-r from-gray-800 to-gray-900 text-white rounded-full font-medium hover:shadow-xl transform hover:scale-105 transition-all duration-300 group/link"
              target="_blank"
              rel="noopener noreferrer"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
              </svg>
              View on GitHub
              <svg class="w-4 h-4 group-hover/link:translate-x-1 transition-transform duration-300" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
              </svg>
            </a>
          </div>
        </div>
      ))}
    </div>
  </div>
</Layout>

<style>
  @keyframes fadeUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .animate-fade-up {
    animation: fadeUp 0.8s ease-out forwards;
  }
</style>
