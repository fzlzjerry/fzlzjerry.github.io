---
import Layout from '../layouts/Layout.astro';

const projects = [
  {
    title: 'Windows 12 Web',
    description: 'A web-based Windows 12 concept UI implementation with modern web technologies. Features a realistic Windows-like interface, multiple windows management, and various system apps.',
    tech: ['Html', 'CSS', 'JS'],
    github: 'https://github.com/tjy-gitnub/win12',
    image: '/projects/win12.png',
    featured: true
  },
  {
    title: 'Graphing Calculator',
    description: 'A powerful graphing calculator built with Python and Qt, featuring intuitive UI and advanced mathematical functions.',
    tech: ['Python', 'Qt'],
    github: 'https://github.com/fzlzjerry/graphing_calculator',
    image: '/projects/calculator.png',
    featured: false
  }
];
---

<Layout
  title="Projects - Morax Cheng"
  description="Explore the projects developed by Morax Cheng, including 'Windows 12 Web' (HTML, CSS, JS) and a 'Graphing Calculator' (Python, Qt). View code on GitHub and see his development skills in action."
>
  <div class="space-y-6 md:space-y-8">
    <h1 class="text-2xl md:text-3xl px-4" style="font-weight: 300; letter-spacing: 0.05em; border-bottom: 1px solid var(--border-light); padding-bottom: 0.5rem;">My Projects</h1>
  
    <div class="grid gap-6 md:gap-8 px-4">
      {projects.map(project => (
        <div class={`border rounded p-4 md:p-6 interactive-element transition-all ${project.featured ? '' : ''}`} style={`border-color: var(--border-light); ${project.featured ? 'background-color: var(--accent-light);' : ''}`}>
          <div class="flex flex-col sm:flex-row sm:justify-between sm:items-start gap-3 mb-4">
            <h2 class="text-lg md:text-xl" style="font-weight: 400; letter-spacing: 0.03em; color: var(--text-light);">{project.title}</h2>
            {project.featured && (
              <span class="unified-tag text-xs self-start">
                Featured
              </span>
            )}
          </div>
          <p class="mb-4 text-sm md:text-base" style="color: var(--text-muted-light); text-align: left;">{project.description}</p>
          <div class="flex flex-wrap gap-2 mb-4">
            {project.tech.map(tech => (
              <span class="unified-tag text-xs">
                {tech}
              </span>
            ))}
          </div>
          <a 
            href={project.github}
            class="inline-flex items-center gap-1 transition-all text-sm md:text-base"
            target="_blank"
            rel="noopener noreferrer"
            style="color: var(--text-muted-light); text-decoration: underline; text-decoration-thickness: 1px; text-underline-offset: 0.2em;"
          >
            View on GitHub 
            <svg class="w-3 h-3 md:w-4 md:h-4 transition-transform" viewBox="0 0 24 24" fill="none" stroke="currentColor" style="transition: transform var(--transition-base);">
              <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
              <polyline points="15 3 21 3 21 9"></polyline>
              <line x1="10" y1="14" x2="21" y2="3"></line>
            </svg>
          </a>
        </div>
      ))}
    </div>
  </div>
</Layout>

<style>
  a:hover svg {
    transform: translate(2px, -2px);
  }
</style>
