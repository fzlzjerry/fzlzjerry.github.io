---
import Layout from '../layouts/Layout.astro';
---

<Layout title="404 Not Found">
  <div class="flex flex-col items-center justify-center min-h-[60vh] px-4">
    <div class="w-full max-w-2xl mb-10 reveal">
      <video 
        class="w-full h-auto rounded-xl border border-white/[0.06]"
        autoplay
        loop
        muted
        playsinline
        aria-label="404 animation"
      >
        <source src="/404.webm" type="video/webm">
        Your browser does not support the video tag.
      </video>
    </div>
    
    <div class="text-center flex flex-col items-center gap-6 reveal stagger-1">
      <h1 class="text-4xl md:text-5xl font-serif font-medium text-brand-text tracking-tight">
        Page Not Found
      </h1>
      <p class="text-brand-muted text-lg">The page you're looking for doesn't exist or has been moved.</p>
      
      <a 
        href="/" 
        class="group inline-flex items-center gap-2 px-6 py-3 text-sm font-medium text-brand-bg bg-brand-accent rounded-lg hover:shadow-glow transition-all duration-smooth press-effect"
      >
        <i class="fa-solid fa-arrow-left text-xs transition-transform duration-fast group-hover:-translate-x-0.5" aria-hidden="true"></i>
        Return to Home
      </a>
    </div>
  </div>
</Layout>
