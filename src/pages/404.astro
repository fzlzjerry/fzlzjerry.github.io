---
import Layout from '../layouts/Layout.astro';
---

<Layout title="404 Not Found">
  <main class="flex flex-col items-center justify-start pt-10 pb-4 min-h-[75vh]" style="background-color: var(--primary-light);">
    <div class="w-full max-w-3xl">
      <video 
        class="w-full h-auto"
        autoplay
        loop
        muted
        playsinline
      >
        <source src="/404.webm" type="video/webm">
        Your browser does not support the video tag.
      </video>
    </div>
    <div class="text-center mt-2">
      <h1 class="text-5xl mb-8" style="font-weight: 300; letter-spacing: 0.08em; color: var(--text-light);">Page Not Found</h1>
      <a href="/" class="inline-flex items-center px-6 py-3 text-sm transition-all duration-300 ease-in-out transform hover:scale-105" style="color: var(--text-light); border: 1px solid var(--border-light); background-color: var(--accent-light); text-decoration: none; letter-spacing: 0.05em;">
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Return to Home
      </a>
    </div>
  </main>
</Layout>

