---
import Layout from '../layouts/Layout.astro';
---

<Layout title="404 Not Found">
  <main class="flex flex-col items-center justify-center min-h-[60vh] px-4 animate-on-scroll relative">
    <!-- Atmospheric gradient -->
    <div class="absolute inset-0 -z-10" aria-hidden="true">
      <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[400px] h-[300px] bg-[radial-gradient(ellipse_at_center,rgba(232,168,56,0.08)_0%,transparent_70%)] blur-3xl"></div>
    </div>

    <div class="w-full max-w-2xl mb-8">
      <video
        class="w-full h-auto rounded-[4px] border border-white/[0.06]"
        autoplay
        loop
        muted
        playsinline
        aria-label="404 animation"
      >
        <source src="/404.webm" type="video/webm">
        Your browser does not support the video tag.
      </video>
    </div>

    <div class="text-center space-y-6">
      <h1 class="text-4xl md:text-5xl font-display text-[#F5F5F0] tracking-tight">
        Page Not Found
      </h1>

      <a
        href="/"
        class="inline-flex items-center px-6 py-3 text-sm font-medium text-[#0C0C0E] bg-[#E8A838] rounded-[3px] hover:scale-[1.02] hover:shadow-[0_0_20px_rgba(232,168,56,0.3)] transition-all"
      >
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Return to Home
      </a>
    </div>
  </main>
</Layout>
