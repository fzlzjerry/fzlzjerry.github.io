---
import Layout from '../layouts/Layout.astro';
---

<Layout title="404 Not Found">
  <main class="flex flex-col items-center justify-center min-h-[60vh] px-4 animate-on-scroll">
    <div class="w-full max-w-2xl mb-8">
      <video 
        class="w-full h-auto rounded-xl shadow-sm"
        autoplay
        loop
        muted
        playsinline
        aria-label="404 animation"
      >
        <source src="/404.webm" type="video/webm">
        Your browser does not support the video tag.
      </video>
    </div>
    
    <div class="text-center space-y-6">
      <h1 class="text-4xl md:text-5xl font-serif font-medium text-zinc-900 tracking-tight">
        Page Not Found
      </h1>
      
      <a 
        href="/" 
        class="inline-flex items-center px-6 py-3 text-sm font-medium text-zinc-900 bg-white border border-zinc-200 rounded-lg hover:bg-zinc-50 hover:border-zinc-300 transition-all hover:shadow-sm"
      >
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Return to Home
      </a>
    </div>
  </main>
</Layout>
