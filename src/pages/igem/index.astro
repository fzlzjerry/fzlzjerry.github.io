---
import Layout from '../../layouts/Layout.astro';

const sections = [
  {
    title: 'Weekly Reports',
    description: 'Documentation of our weekly progress and achievements',
    link: '/igem/weekly-reports',
    icon: 'fa-file-lines'
  },
  {
    title: 'Assignments',
    description: 'Project tasks and assignments for team members',
    link: '/igem/assignments',
    icon: 'fa-tasks'
  }
];
---

<Layout
  title="iGEM - Morax Cheng"
  description="Learn about the progress of the BASIS International School Park Lane Harbour iGEM team. Find weekly reports, assignments, and Morax Cheng's contributions to the International Genetically Engineered Machine competition."
>
  <div class="max-w-3xl mx-auto space-y-12 animate-on-scroll">
    <header class="text-center max-w-2xl mx-auto">
      <h1 class="text-3xl md:text-4xl font-serif font-medium text-zinc-900 mb-4">iGEM Team</h1>
      <p class="text-zinc-500 text-lg leading-relaxed">
        International Genetically Engineered Machine Competition - BASIS International School Park Lane Harbour Team
      </p>
    </header>

    <div class="grid md:grid-cols-2 gap-6">
      {sections.map(section => (
        <a
          href={section.link}
          class="group block p-6 bg-white border border-zinc-200 rounded-2xl hover:border-zinc-300 hover:shadow-sm transition-all"
        >
          <div class="flex justify-between items-start mb-4">
            <h2 class="text-xl font-medium text-zinc-900 group-hover:text-zinc-700 transition-colors">
              {section.title}
            </h2>
            <svg class="w-5 h-5 text-zinc-400 group-hover:text-zinc-600 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </div>
          <p class="text-zinc-500 text-sm leading-relaxed">
            {section.description}
          </p>
        </a>
      ))}
    </div>
  </div>
</Layout>
