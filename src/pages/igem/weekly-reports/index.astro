---
import Layout from '../../../layouts/Layout.astro';
import { reports } from '../../../data/reports';
---

<Layout
  title="Weekly Reports - iGEM - Morax Cheng"
  description="Browse the weekly progress reports from the BASIS International School Park Lane Harbour iGEM team. Stay updated on their latest developments and achievements in the International Genetically Engineered Machine competition project."
>
  <div class="max-w-4xl mx-auto space-y-8">
    <header class="space-y-4">
      <a href="/igem" class="inline-flex items-center gap-2" style="color: var(--text-muted); text-decoration: underline; text-decoration-thickness: 1px; text-underline-offset: 0.2em;">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
        Back to iGEM
      </a>
      <h1 class="text-3xl text-center md:text-left" style="font-weight: 300; letter-spacing: 0.05em; border-bottom: 1px solid var(--border); padding-bottom: 0.5rem;">Weekly Reports</h1>
    </header>

    <div class="grid gap-6">
      {reports.map(report => (
        <a
          href={`/igem/weekly-reports/${report.date.toLowerCase().replace(/[^a-z0-9]+/g, '-')}`}
          class="block border rounded p-6 interactive-element hover:shadow-md transition-all duration-200"
          style="border-color: var(--border);"
        >
          <div class="flex justify-between items-center">
            <time class="text-xl" style="font-weight: 400; letter-spacing: 0.02em;">{report.date}</time>
            <svg class="w-5 h-5" style="color: var(--text-muted);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </div>
        </a>
      ))}
    </div>
  </div>
</Layout>

<style>
  /* Ensure smooth transitions */
  .transition-all {
    transition-property: all;
    transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
  }
</style>