---
import Layout from '../../../layouts/Layout.astro';
import { reports } from '../../../data/reports';
---

<Layout
  title="Weekly Reports - iGEM - Morax Cheng"
  description="Browse the weekly progress reports from the BASIS International School Park Lane Harbour iGEM team."
>
  <div class="max-w-3xl mx-auto space-y-12 animate-on-scroll">
    <header class="text-center space-y-4">
      <a href="/igem" class="inline-flex items-center text-sm text-zinc-500 hover:text-zinc-900 transition-colors">
        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7 7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Back to iGEM
      </a>
      <h1 class="text-3xl md:text-4xl font-serif font-medium text-zinc-900">Weekly Reports</h1>
      <p class="text-zinc-500 text-lg">
        Documentation of progress and achievements.
      </p>
    </header>

    <div class="grid gap-4">
      {reports.map(report => (
        <a
          href={`/igem/weekly-reports/${report.date.toLowerCase().replace(/[^a-z0-9]+/g, '-')}`}
          class="group flex items-center justify-between p-6 bg-white border border-zinc-200 rounded-2xl hover:border-zinc-300 hover:shadow-sm transition-all"
        >
          <div>
            <h2 class="text-lg font-medium text-zinc-900 group-hover:text-zinc-700 transition-colors mb-1">
              Week of {report.date}
            </h2>
            <div class="flex items-center gap-2 text-sm text-zinc-400">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
              </svg>
              {report.author}
            </div>
          </div>
          
          <div class="p-2 bg-zinc-50 rounded-full text-zinc-400 group-hover:bg-zinc-100 group-hover:text-zinc-600 transition-colors">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </div>
        </a>
      ))}
    </div>
  </div>
</Layout>
