---
import Layout from '../../../layouts/Layout.astro';

const importantNotes = [
  { note: 'Only static URLs are accepted for documentation', icon: 'link' },
  { note: 'Teams must be multidisciplinary', icon: 'users-cog' },
  { note: 'All progress must be openly shared', icon: 'share-alt' },
  { note: 'Proper attribution required for all work', icon: 'certificate' }
];
---

<Layout title="Competition Rules - iGEM - Morax Cheng">
  <div class="space-y-8">
    <header class="space-y-4">
      <a href="/igem/assignments" class="text-blue-600 dark:text-blue-400 hover:underline inline-flex items-center gap-2">
        <i class="fas fa-arrow-left"></i>
        Back to Assignments
      </a>
      <h1 class="text-3xl font-bold">Competition Rules</h1>
    </header>

    <div class="border dark:border-gray-800 rounded-lg p-6">
      <h2 class="text-2xl font-bold mb-6 flex items-center gap-2">
        <i class="fas fa-exclamation-circle text-red-500"></i>
        Important Rules
      </h2>
      <ul class="space-y-4">
        {importantNotes.map(note => (
          <li class="flex items-start gap-3">
            <i class={`fas fa-${note.icon} text-red-500 mt-1 w-5`}></i>
            <span>{note.note}</span>
          </li>
        ))}
      </ul>
    </div>

    <div class="border dark:border-gray-800 rounded-lg p-6">
      <h2 class="text-2xl font-bold mb-6">Event Details</h2>
      <div class="space-y-4">
        <div class="flex items-center gap-3">
          <i class="fas fa-calendar text-blue-500 w-5"></i>
          <span>Grand Jamboree: October 28-31, 2025</span>
        </div>
        <div class="flex items-center gap-3">
          <i class="fas fa-map-marker-alt text-blue-500 w-5"></i>
          <span>Location: Paris, France</span>
        </div>
        <div class="flex items-center gap-3">
          <i class="fas fa-globe text-blue-500 w-5"></i>
          <span>Format: Hybrid (In-person and Remote participation available)</span>
        </div>
      </div>
    </div>
  </div>
</Layout>

<script>
  // Add Font Awesome if not already added
  if (!document.querySelector('link[href*="font-awesome"]')) {
    const link = document.createElement('link');
    link.rel = 'stylesheet';
    link.href = 'https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css';
    document.head.appendChild(link);
  }
</script>