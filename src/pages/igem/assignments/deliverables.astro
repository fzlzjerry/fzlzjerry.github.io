---
import Layout from '../../../layouts/Layout.astro';

const deliverables = [
  { name: 'Safety Forms', icon: 'shield-alt' },
  { name: 'Judging Form', icon: 'gavel' },
  { name: 'Attribution Form', icon: 'clipboard-check' },
  { name: 'Promotion & Presentation Videos', icon: 'video' },
  { name: 'Project Description', icon: 'file-alt' },
  { name: 'Team Wiki', icon: 'globe' },
  { name: 'Part Pages', icon: 'puzzle-piece' },
  { name: 'Project Software', icon: 'code' },
  { name: 'Team Roster', icon: 'users' },
  { name: 'Judging Session', icon: 'comments' },
  { name: 'Project Presentation', icon: 'chalkboard-teacher' }
];
---

<Layout title="Required Deliverables - iGEM - Morax Cheng">
  <div class="space-y-8">
    <header class="space-y-4">
      <a href="/igem/assignments" class="text-blue-600 dark:text-blue-400 hover:underline inline-flex items-center gap-2">
        <i class="fas fa-arrow-left"></i>
        Back to Assignments
      </a>
      <h1 class="text-3xl font-bold">Required Deliverables</h1>
    </header>

    <div class="border dark:border-gray-800 rounded-lg p-6">
      <h2 class="text-2xl font-bold mb-6 flex items-center gap-2">
        <i class="fas fa-tasks text-blue-500"></i>
        Submission Requirements
      </h2>
      <ul class="space-y-4">
        {deliverables.map(item => (
          <li class="flex items-center gap-3">
            <i class={`fas fa-${item.icon} text-blue-500 w-5`}></i>
            <span>{item.name}</span>
          </li>
        ))}
      </ul>
    </div>
  </div>
</Layout>

<script>
  // Add Font Awesome if not already added
  if (!document.querySelector('link[href*="font-awesome"]')) {
    const link = document.createElement('link');
    link.rel = 'stylesheet';
    link.href = 'https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css';
    document.head.appendChild(link);
  }
</script>