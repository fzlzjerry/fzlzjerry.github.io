---
import Layout from '../../../layouts/Layout.astro';

const specialPrizes = [
  { name: 'Education & Inspiration', icon: 'graduation-cap' },
  { name: 'Entrepreneurship', icon: 'business-time' },
  { name: 'Hardware Excellence', icon: 'tools' },
  { name: 'Inclusivity', icon: 'users' },
  { name: 'Human Practices', icon: 'heart' },
  { name: 'Measurement Accuracy', icon: 'chart-line' },
  { name: 'Plant Synthetic Biology', icon: 'leaf' },
  { name: 'Safety & Security', icon: 'shield-alt' },
  { name: 'Software Tools', icon: 'code' },
  { name: 'Sustainable Development', icon: 'globe' },
  { name: 'Wiki Excellence', icon: 'file-code' }
];

const medalCriteria = {
  Bronze: 'Complete project presentation and documentation',
  Silver: 'Engineering success and human practices',
  Gold: 'Excellence in specialized areas'
};
---

<Layout title="Awards & Medals - iGEM - Morax Cheng">
  <div class="space-y-8">
    <header class="space-y-4">
      <a href="/igem/assignments" class="text-blue-600 dark:text-blue-400 hover:underline inline-flex items-center gap-2">
        <i class="fas fa-arrow-left"></i>
        Back to Assignments
      </a>
      <h1 class="text-3xl font-bold">Awards & Medals</h1>
    </header>

    <div class="border dark:border-gray-800 rounded-lg p-6">
      <h2 class="text-2xl font-bold mb-6 flex items-center gap-2">
        <i class="fas fa-award text-yellow-500"></i>
        Medal Criteria
      </h2>
      <ul class="space-y-4">
        {Object.entries(medalCriteria).map(([level, criteria]) => (
          <li class="flex items-start gap-3">
            <i class={`fas fa-medal text-${level.toLowerCase() === 'gold' ? 'yellow' : level.toLowerCase() === 'silver' ? 'gray' : 'orange'}-500 mt-1`}></i>
            <div>
              <strong>{level}:</strong>
              <span class="text-gray-600 dark:text-gray-300 ml-1">{criteria}</span>
            </div>
          </li>
        ))}
      </ul>
    </div>

    <div class="border dark:border-gray-800 rounded-lg p-6">
      <h2 class="text-2xl font-bold mb-6 flex items-center gap-2">
        <i class="fas fa-trophy text-blue-500"></i>
        Special Prizes
      </h2>
      <ul class="space-y-3">
        {specialPrizes.map(prize => (
          <li class="flex items-center gap-3">
            <i class={`fas fa-${prize.icon} text-blue-500 w-5`}></i>
            <span>{prize.name}</span>
          </li>
        ))}
      </ul>
    </div>
  </div>
</Layout>

<script>
  // Add Font Awesome if not already added
  if (!document.querySelector('link[href*="font-awesome"]')) {
    const link = document.createElement('link');
    link.rel = 'stylesheet';
    link.href = 'https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css';
    document.head.appendChild(link);
  }
</script>