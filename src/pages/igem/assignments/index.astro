---
import Layout from '../../../layouts/Layout.astro';
import { assignments } from '../../../data/assignments';

const assignment = assignments[0]; // We only have one assignment currently
---

<Layout
  title="Assignments - iGEM - Morax Cheng"
  description="View the assignments for the BASIS International School Park Lane Harbour iGEM team. Understand the specific tasks and responsibilities of team members in the International Genetically Engineered Machine competition project."
>
  <div class="space-y-8">
    <header class="space-y-4">
      <a href="/igem" class="hover:underline inline-flex items-center gap-2">
        <i class="fas fa-arrow-left"></i>
        Back to iGEM
      </a>
      <h1 class="text-3xl font-bold">Assignments</h1>
    </header>

    <div class="grid gap-4">
      {assignments.map(assignment => (
        <a
          href={`/igem/assignments/${assignment.id}`}
          class="block p-4 border dark:border-gray-800 rounded-lg interactive-element transition-all"
        >
          <div class="flex justify-between items-center">
            <div class="flex items-center gap-3">
              <i class="fas fa-book text-gray-600 dark:text-gray-400 font-icon"></i>
              <div>
                <h2 class="font-medium">{assignment.title}</h2>
                <time class="text-sm text-gray-500">{assignment.date}</time>
              </div>
            </div>
            <i class="fas fa-chevron-right text-gray-400"></i>
          </div>
        </a>
      ))}
    </div>
  </div>
</Layout>

<script>
  // Add Font Awesome if not already added
  if (!document.querySelector('link[href*="font-awesome"]')) {
    const link = document.createElement('link');
    link.rel = 'stylesheet';
    link.href = 'https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css';
    document.head.appendChild(link);
  }
</script>