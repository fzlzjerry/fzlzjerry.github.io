---
import Layout from '../../../layouts/Layout.astro';
import { assignments } from '../../../data/assignments';

// Sort assignments by date if needed, though typically they are static
// const sortedAssignments = assignments.sort((a, b) => new Date(b.date).getTime() - new Date(a.date).getTime());
---

<Layout
  title="Assignments - iGEM - Morax Cheng"
  description="View the assignments for the BASIS International School Park Lane Harbour iGEM team."
>
  <div class="max-w-3xl mx-auto space-y-12 animate-on-scroll">
    <header class="text-center space-y-4">
      <a href="/igem" class="inline-flex items-center text-sm text-zinc-500 hover:text-zinc-900 transition-colors">
        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7 7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Back to iGEM
      </a>
      <h1 class="text-3xl md:text-4xl font-serif font-medium text-zinc-900">Assignments</h1>
      <p class="text-zinc-500 text-lg">
        Tasks and responsibilities for the project.
      </p>
    </header>

    <div class="grid gap-4">
      {assignments.map(assignment => (
        <a
          href={`/igem/assignments/${assignment.id}`}
          class="group flex items-center justify-between p-6 bg-white border border-zinc-200 rounded-2xl hover:border-zinc-300 hover:shadow-sm transition-all"
        >
          <div>
            <h2 class="text-lg font-medium text-zinc-900 group-hover:text-zinc-700 transition-colors mb-1">
              {assignment.title}
            </h2>
            <time class="text-sm text-zinc-400 font-mono">{assignment.date}</time>
          </div>
          
          <div class="p-2 bg-zinc-50 rounded-full text-zinc-400 group-hover:bg-zinc-100 group-hover:text-zinc-600 transition-colors">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </div>
        </a>
      ))}
    </div>
  </div>
</Layout>
