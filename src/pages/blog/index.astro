---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const allPosts = await getCollection('blog');
const categories = [...new Set(allPosts.map(post => post.data.category).filter(Boolean))];
const tags = [...new Set(allPosts.flatMap(post => post.data.tags))];

const sortedPosts = allPosts.sort((a, b) => 
  new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
);
---

<Layout
  title="Blog - Morax Cheng"
  description="Browse Morax Cheng's blog for articles on programming, technology, economics, and personal reflections. Discover new insights and project updates."
>
  <div class="max-w-4xl mx-auto space-y-8">
    <h1 class="text-3xl text-center md:text-left" style="font-weight: 300; letter-spacing: 0.05em; border-bottom: 1px solid var(--border-light); padding-bottom: 0.5rem;">Blog</h1>

    <div class="space-y-6">
      <section class="space-y-4">
        <h2 class="text-xl" style="font-weight: 400; letter-spacing: 0.03em;">Categories</h2>
        <div class="flex flex-wrap gap-2">
          {categories.map(category => (
            <a
              href={`/blog/category/${category?.toLowerCase()}`}
              class="unified-tag"
            >
              {category}
            </a>
          ))}
        </div>
      </section>

      <section class="space-y-4">
        <h2 class="text-xl" style="font-weight: 400; letter-spacing: 0.03em;">Tags</h2>
        <div class="flex flex-wrap gap-2">
          {tags.map(tag => (
            <a
              href={`/blog/tag/${tag?.toLowerCase()}`}
              class="unified-tag"
            >
              #{tag}
            </a>
          ))}
        </div>
      </section>
    </div>

    <section class="grid gap-8">
      {sortedPosts.map(post => (
        <article class="border rounded p-6 interactive-element hover:shadow-md transition-all duration-200" style="border-color: var(--border-light);">
          <h2 class="text-xl md:text-2xl mb-3" style="font-weight: 400; letter-spacing: 0.02em;">
            <a 
              href={`/blog/${post.slug}`} 
              class="transition-colors duration-200"
              style="text-decoration: none; color: inherit;"
            >
              {post.data.title}
            </a>
          </h2>
          
          <div class="flex flex-wrap gap-4 text-sm mb-4" style="color: var(--text-muted-light);">
            <time datetime={post.data.date} class="inline-flex items-center">
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
              {new Date(post.data.date).toLocaleDateString('en-US', {
                year: 'numeric',
                month: 'long',
                day: 'numeric'
              })}
            </time>
            
            {post.data.category && (
              <a 
                href={`/blog/category/${post.data.category.toLowerCase()}`}
                class="inline-flex items-center transition-colors duration-200"
                style="text-decoration: none; color: inherit;"
              >
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
                </svg>
                {post.data.category}
              </a>
            )}
          </div>
          
          {post.data.tags && (
            <div class="flex flex-wrap gap-2 mb-4">
              {post.data.tags.map(tag => (
                <a
                  href={`/blog/tag/${tag.toLowerCase()}`}
                  class="unified-tag"
                >
                  #{tag}
                </a>
              ))}
            </div>
          )}
          
          {post.data.excerpt && (
            <p class="line-clamp-3" style="color: var(--text-muted-light); text-align: left;">
              {post.data.excerpt}
            </p>
          )}
        </article>
      ))}
    </section>
  </div>
</Layout>

<style>
  /* Ensure smooth transitions */
  .transition-all {
    transition-property: all;
    transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  /* Override default touch target sizes for blog tags */
  .blog-tag {
    min-height: unset !important;
    min-width: unset !important;
    padding: 0.375rem 0.75rem !important;
    display: inline-flex;
    align-items: center;
    line-height: 1;
  }
  
  /* Prevent layout shift during hover animations */
  article {
    transform: translateZ(0);
    backface-visibility: hidden;
  }
  
</style>