---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const allPosts = await getCollection('blog');
const categories = [...new Set(allPosts.map(post => post.data.category).filter(Boolean))];
const tags = [...new Set(allPosts.flatMap(post => post.data.tags))];

const sortedPosts = allPosts.sort((a, b) => 
  new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
);
---

<Layout
  title="Blog - Morax Cheng"
  description="Browse Morax Cheng's blog for articles on programming, technology, economics, and personal reflections. Discover new insights and project updates."
>
  <div class="max-w-5xl mx-auto space-y-10 animate-fade-up">
    <div class="text-center">
      <h1 class="text-4xl md:text-5xl font-bold mb-4 bg-gradient-to-r from-blue-500 via-indigo-600 to-purple-600 bg-clip-text text-transparent">
        Blog
      </h1>
      <p class="text-gray-600 max-w-2xl mx-auto">
        Thoughts on technology, programming, and the digital future
      </p>
    </div>

    <div class="grid md:grid-cols-2 gap-6">
      <section class="bg-white rounded-2xl p-6 shadow-lg hover:shadow-xl transition-all duration-300">
        <h2 class="text-lg font-semibold text-gray-800 mb-4 flex items-center">
          <svg class="w-5 h-5 mr-2 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
          </svg>
          Categories
        </h2>
        <div class="flex flex-wrap gap-2">
          {categories.map(category => (
            <a
              href={`/blog/category/${category?.toLowerCase()}`}
              class="px-4 py-2 bg-gradient-to-r from-blue-500/10 to-indigo-600/10 text-gray-700 rounded-full text-sm font-medium hover:from-blue-500/20 hover:to-indigo-600/20 hover:scale-105 transform transition-all duration-300"
            >
              {category}
            </a>
          ))}
        </div>
      </section>

      <section class="bg-white rounded-2xl p-6 shadow-lg hover:shadow-xl transition-all duration-300">
        <h2 class="text-lg font-semibold text-gray-800 mb-4 flex items-center">
          <svg class="w-5 h-5 mr-2 text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 20l4-16m2 16l4-16M6 9h14M4 15h14"></path>
          </svg>
          Popular Tags
        </h2>
        <div class="flex flex-wrap gap-2">
          {tags.map(tag => (
            <a
              href={`/blog/tag/${tag?.toLowerCase()}`}
              class="px-4 py-2 bg-gradient-to-r from-indigo-500/10 to-purple-600/10 text-gray-700 rounded-full text-sm font-medium hover:from-indigo-500/20 hover:to-purple-600/20 hover:scale-105 transform transition-all duration-300"
            >
              #{tag}
            </a>
          ))}
        </div>
      </section>
    </div>

    <section class="grid gap-6">
      {sortedPosts.map((post, index) => (
        <article 
          class="group bg-white rounded-2xl p-8 shadow-lg hover:shadow-2xl transform hover:-translate-y-2 transition-all duration-300 relative overflow-hidden"
          style={`animation: fadeUp 0.6s ease-out ${index * 0.1}s forwards; opacity: 0`}
        >
          <!-- Animated gradient overlay -->
          <div class="absolute inset-0 bg-gradient-to-br from-blue-500/5 via-transparent to-purple-500/5 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
          
          <div class="relative z-10">
            <h2 class="text-xl md:text-2xl font-bold mb-4 text-gray-800 group-hover:text-blue-600 transition-colors duration-300">
              <a 
                href={`/blog/${post.slug}`} 
                class="hover:underline decoration-2 decoration-blue-500/30 underline-offset-4"
              >
                {post.data.title}
              </a>
            </h2>
          
            <div class="flex flex-wrap gap-4 text-sm mb-4 text-gray-500">
              <time datetime={post.data.date} class="inline-flex items-center font-medium">
                <svg class="w-4 h-4 mr-2 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
                {new Date(post.data.date).toLocaleDateString('en-US', {
                  year: 'numeric',
                  month: 'long',
                  day: 'numeric'
                })}
              </time>
              
              {post.data.category && (
                <a 
                  href={`/blog/category/${post.data.category.toLowerCase()}`}
                  class="inline-flex items-center font-medium hover:text-indigo-600 transition-colors duration-200"
                >
                  <svg class="w-4 h-4 mr-2 text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
                  </svg>
                  {post.data.category}
                </a>
              )}
            </div>
          
            {post.data.tags && (
              <div class="flex flex-wrap gap-2 mb-4">
                {post.data.tags.map(tag => (
                  <a
                    href={`/blog/tag/${tag.toLowerCase()}`}
                    class="px-3 py-1 bg-gradient-to-r from-purple-500/10 to-pink-600/10 text-gray-700 rounded-full text-xs font-medium hover:from-purple-500/20 hover:to-pink-600/20 hover:scale-105 transform transition-all duration-300"
                  >
                    #{tag}
                  </a>
                ))}
              </div>
            )}
            
            {post.data.excerpt && (
              <p class="text-gray-600 leading-relaxed line-clamp-3 mb-4">
                {post.data.excerpt}
              </p>
            )}
            
            <div class="inline-flex items-center text-blue-600 font-medium group-hover:gap-2 transition-all duration-300">
              Read More
              <svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </div>
          </div>
        </article>
      ))}
    </section>
  </div>
</Layout>

<style>
  @keyframes fadeUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .animate-fade-up {
    animation: fadeUp 0.8s ease-out forwards;
  }
  
  /* Line clamp utilities */
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>