---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const allPosts = await getCollection('blog');
const categories = [...new Set(allPosts.map(post => post.data.category).filter(Boolean))];
const tags = [...new Set(allPosts.flatMap(post => post.data.tags))];

const sortedPosts = allPosts.sort((a, b) => 
  new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
);
---

<Layout title="Blog - Morax Cheng">
  <div class="max-w-4xl mx-auto space-y-8">
    <h1 class="text-3xl font-bold text-center md:text-left">Blog</h1>

    <div class="space-y-6">
      <section class="space-y-4">
        <h2 class="text-xl font-semibold">Categories</h2>
        <div class="flex flex-wrap gap-2">
          {categories.map(category => (
            <a
              href={`/blog/category/${category?.toLowerCase()}`}
              class="blog-tag px-3 py-1.5 rounded-full bg-gray-100 dark:bg-gray-800 text-sm hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors duration-200"
            >
              {category}
            </a>
          ))}
        </div>
      </section>

      <section class="space-y-4">
        <h2 class="text-xl font-semibold">Tags</h2>
        <div class="flex flex-wrap gap-2">
          {tags.map(tag => (
            <a
              href={`/blog/tag/${tag?.toLowerCase()}`}
              class="blog-tag px-3 py-1.5 rounded-full bg-blue-100 dark:bg-blue-900 text-sm hover:bg-blue-200 dark:hover:bg-blue-800 transition-colors duration-200"
            >
              #{tag}
            </a>
          ))}
        </div>
      </section>
    </div>

    <section class="grid gap-8">
      {sortedPosts.map(post => (
        <article class="border dark:border-gray-800 rounded-lg p-6 hover:shadow-lg dark:hover:shadow-gray-800 transition-all duration-200">
          <h2 class="text-xl md:text-2xl font-bold mb-3">
            <a 
              href={`/blog/${post.slug}`} 
              class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors duration-200"
            >
              {post.data.title}
            </a>
          </h2>
          
          <div class="flex flex-wrap gap-4 text-sm text-gray-600 dark:text-gray-400 mb-4">
            <time datetime={post.data.date} class="inline-flex items-center">
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
              {new Date(post.data.date).toLocaleDateString('en-US', {
                year: 'numeric',
                month: 'long',
                day: 'numeric'
              })}
            </time>
            
            {post.data.category && (
              <a 
                href={`/blog/category/${post.data.category.toLowerCase()}`}
                class="blog-tag inline-flex items-center hover:text-blue-600 dark:hover:text-blue-400 transition-colors duration-200"
              >
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
                </svg>
                {post.data.category}
              </a>
            )}
          </div>
          
          {post.data.tags && (
            <div class="flex flex-wrap gap-2 mb-4">
              {post.data.tags.map(tag => (
                <a
                  href={`/blog/tag/${tag.toLowerCase()}`}
                  class="blog-tag inline-flex items-center px-2 py-1 text-sm bg-blue-100 dark:bg-blue-900 rounded-full hover:bg-blue-200 dark:hover:bg-blue-800 transition-colors duration-200"
                >
                  #{tag}
                </a>
              ))}
            </div>
          )}
          
          {post.data.excerpt && (
            <p class="text-gray-600 dark:text-gray-300 line-clamp-3">
              {post.data.excerpt}
            </p>
          )}
        </article>
      ))}
    </section>
  </div>
</Layout>

<style>
  /* Ensure smooth transitions */
  .transition-all {
    transition-property: all;
    transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  /* Override default touch target sizes for blog tags */
  .blog-tag {
    min-height: unset !important;
    min-width: unset !important;
    padding: 0.375rem 0.75rem !important;
    display: inline-flex;
    align-items: center;
    line-height: 1;
  }
  
  /* Prevent layout shift during hover animations */
  article {
    transform: translateZ(0);
    backface-visibility: hidden;
  }
</style>