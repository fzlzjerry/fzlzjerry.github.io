---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const allPosts = await getCollection('blog');
const categories = [...new Set(allPosts.map(post => post.data.category).filter(Boolean))];
const tags = [...new Set(allPosts.flatMap(post => post.data.tags))];

const sortedPosts = allPosts.sort((a, b) => 
  new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
);
---

<Layout
  title="Blog - Morax Cheng"
  description="Browse Morax Cheng's blog for articles on programming, technology, economics, and personal reflections. Discover new insights and project updates."
>
  <div class="max-w-4xl mx-auto space-y-8">
    <div class="blog-header">
      <h1 class="text-4xl md:text-5xl mb-4 text-center md:text-left" style="font-weight: 300; letter-spacing: 0.05em;">Blog</h1>
      <div class="border-b-2 mb-6" style="border-color: var(--border-light); width: 80px;"></div>
      <p class="text-lg text-center md:text-left mb-8" style="color: var(--text-muted-light);">Thoughts on programming, economics, and continuous learning.</p>
    </div>

    <div class="space-y-8 filter-section">
      <section class="space-y-4">
        <h2 class="text-xl md:text-2xl" style="font-weight: 400; letter-spacing: 0.03em;">Categories</h2>
        <div class="flex flex-wrap gap-3">
          {categories.map(category => (
            <a
              href={`/blog/category/${category?.toLowerCase()}`}
              class="unified-tag"
            >
              {category}
            </a>
          ))}
        </div>
      </section>

      <section class="space-y-4">
        <h2 class="text-xl md:text-2xl" style="font-weight: 400; letter-spacing: 0.03em;">Tags</h2>
        <div class="flex flex-wrap gap-3">
          {tags.map(tag => (
            <a
              href={`/blog/tag/${tag?.toLowerCase()}`}
              class="unified-tag"
            >
              #{tag}
            </a>
          ))}
        </div>
      </section>
    </div>

    <section class="grid gap-8 md:gap-10 posts-section">
      {sortedPosts.map((post, index) => (
        <article class="blog-post-card border-2 rounded-xl p-8 md:p-10 interactive-element transition-all" style="border-color: var(--border-light); background: linear-gradient(to bottom right, var(--primary-light), var(--accent-light));">
          <div class="flex items-center gap-3 mb-4">
            <div class="post-number" style="color: var(--text-muted-light); font-size: 1.5rem; font-weight: 300; opacity: 0.5;">0{index + 1}</div>
          </div>
          
          <h2 class="text-2xl md:text-3xl mb-4" style="font-weight: 400; letter-spacing: 0.02em;">
            <a 
              href={`/blog/${post.slug}`} 
              class="transition-colors duration-200 post-title-link"
              style="text-decoration: none; color: inherit;"
            >
              {post.data.title}
            </a>
          </h2>
          
          <div class="flex flex-wrap gap-4 md:gap-6 text-sm md:text-base mb-6" style="color: var(--text-muted-light);">
            <time datetime={post.data.date} class="inline-flex items-center">
              <svg class="w-4 h-4 md:w-5 md:h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
              {new Date(post.data.date).toLocaleDateString('en-US', {
                year: 'numeric',
                month: 'long',
                day: 'numeric'
              })}
            </time>
            
            {post.data.category && (
              <a 
                href={`/blog/category/${post.data.category.toLowerCase()}`}
                class="inline-flex items-center transition-colors duration-200 category-link"
                style="text-decoration: none; color: inherit;"
              >
                <svg class="w-4 h-4 md:w-5 md:h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
                </svg>
                {post.data.category}
              </a>
            )}
          </div>
          
          {post.data.tags && (
            <div class="flex flex-wrap gap-3 mb-6">
              {post.data.tags.map(tag => (
                <a
                  href={`/blog/tag/${tag.toLowerCase()}`}
                  class="unified-tag"
                >
                  #{tag}
                </a>
              ))}
            </div>
          )}
          
          {post.data.excerpt && (
            <p class="line-clamp-3 text-base md:text-lg leading-relaxed" style="color: var(--text-muted-light); text-align: left;">
              {post.data.excerpt}
            </p>
          )}
        </article>
      ))}
    </section>
  </div>
</Layout>

<style>
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .blog-header {
    animation: fadeInUp 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  .filter-section {
    animation: fadeInUp 0.6s cubic-bezier(0.4, 0, 0.2, 1) 0.1s backwards;
  }
  
  .posts-section {
    animation: fadeInUp 0.6s cubic-bezier(0.4, 0, 0.2, 1) 0.2s backwards;
  }
  
  .blog-post-card {
    position: relative;
    overflow: hidden;
  }
  
  .blog-post-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: left 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  .blog-post-card:hover::before {
    left: 100%;
  }
  
  .blog-post-card:hover {
    border-color: var(--text-muted-light);
  }
  
  .post-title-link {
    position: relative;
  }
  
  .post-title-link::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 2px;
    background-color: var(--text-light);
    transition: width 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  .blog-post-card:hover .post-title-link::after {
    width: 100%;
  }
  
  .category-link:hover {
    color: var(--text-light) !important;
    text-decoration: underline;
  }
  
  .post-number {
    font-family: Georgia, 'Times New Roman', Times, serif;
    line-height: 1;
  }
  
  /* Prevent layout shift during hover animations */
  article {
    transform: translateZ(0);
    backface-visibility: hidden;
  }
</style>