---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map(post => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();

const formattedDate = new Date(post.data.date).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<Layout title={`${post.data.title} - Morax Cheng`} description={post.data.excerpt}>
  <article class="max-w-none">
    <header class="mb-8">
      <h1 class="text-4xl mb-4" style="font-weight: 300; letter-spacing: 0.05em; line-height: 1.3;">{post.data.title}</h1>
      <div class="flex flex-col gap-2" style="color: var(--text-muted-light); padding-bottom: 1rem; border-bottom: 1px solid var(--border-light);">
        <time datetime={post.data.date} style="font-style: italic;">{formattedDate}</time>
        {post.data.authors && (
          <div class="flex gap-2">
            <span>By</span>
            {post.data.authors.join(', ')}
          </div>
        )}
        {post.data.institution && (
          <div>{post.data.institution}</div>
        )}
        {post.data.department && (
          <div>{post.data.department}</div>
        )}
        {post.data.professor && (
          <div>Professor: {post.data.professor}</div>
        )}
      </div>
    </header>

    <div class="mt-8">
      <Content />
    </div>
  </article>
</Layout>

<style>
  /* Article content styles */
  article {
    font-size: 1.05rem;
    line-height: 1.8;
  }
  
  article h1, article h2, article h3, article h4 {
    font-weight: 400;
    letter-spacing: 0.02em;
    margin-top: 2rem;
    margin-bottom: 1rem;
  }
  
  article h2 {
    font-size: 1.75rem;
    border-bottom: 1px solid var(--border-light);
    padding-bottom: 0.5rem;
  }
  
  article h3 {
    font-size: 1.5rem;
  }
  
  article p {
    margin-bottom: 1.25rem;
    text-align: justify;
    hyphens: auto;
    color: var(--text-light);
  }
  
  article a {
    color: var(--text-light);
    text-decoration: underline;
    text-decoration-thickness: 1px;
    text-underline-offset: 0.2em;
  }
  
  article a:hover {
    text-decoration-thickness: 2px;
  }
  
  article blockquote {
    border-left: 3px solid var(--border-light);
    padding-left: 1.5rem;
    margin: 1.5rem 0;
    font-style: italic;
    color: var(--text-muted-light);
  }
  
  article code {
    background-color: var(--accent-light);
    padding: 0.125rem 0.375rem;
    border-radius: 0.25rem;
    font-family: monospace;
    font-size: 0.9em;
  }
  
  article pre {
    background-color: var(--accent-light);
    padding: 1rem;
    border-radius: 0.5rem;
    overflow-x: auto;
    margin: 1.5rem 0;
    border: 1px solid var(--border-light);
  }
  
  article pre code {
    background-color: transparent;
    padding: 0;
  }
  
  article ul, article ol {
    margin-bottom: 1.25rem;
    padding-left: 2rem;
  }
  
  article li {
    margin-bottom: 0.5rem;
    line-height: 1.8;
  }
  
</style>