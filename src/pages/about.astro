---
import Layout from '../layouts/Layout.astro';

const skillCategories = [
  {
    category: "Programming Languages",
    icon: "fa-solid fa-code",
    skills: ["C", "C++", "JavaScript", "Python", "Rust"]
  },
  {
    category: "Web Technologies",
    icon: "fa-solid fa-globe",
    skills: ["HTML5", "CSS3", "React", "Vue", "Node.js"]
  },
  {
    category: "AI/ML & Data Science",
    icon: "fa-solid fa-brain",
    skills: ["TensorFlow", "PyTorch", "Scikit-learn", "NumPy", "Pandas", "OpenCV", "SciPy"]
  },
  {
    category: "Cloud Platforms",
    icon: "fa-solid fa-cloud",
    skills: ["AWS", "Google Cloud", "Azure"]
  },
  {
    category: "Development Tools",
    icon: "fa-solid fa-wrench",
    skills: ["Git", "Docker", "Linux", "MySQL", "Matlab"]
  },
  {
    category: "CMS & Static Sites",
    icon: "fa-solid fa-file-code",
    skills: ["Hexo", "Hugo", "Jekyll"]
  }
];
---

<Layout
  title="About - Morax Cheng"
  description="Learn more about Morax Cheng, a teenage open-source enthusiast and developer from China. Discover his skills in programming (Python, C++, Rust), AI/ML, web technologies, and his passion for learning."
>
  <div class="max-w-3xl mx-auto">
    <!-- Profile Section -->
    <section class="py-12 md:py-20 reveal">
      <div class="flex flex-col md:flex-row items-center md:items-start gap-8 md:gap-12">
        <!-- Avatar -->
        <div class="relative flex-shrink-0">
          <div class="relative">
            <img 
              src="/Morax.JPG" 
              alt="Morax Cheng" 
              class="w-28 h-28 md:w-36 md:h-36 rounded-2xl object-cover border border-white/[0.06]"
              loading="eager" 
            />
            <!-- Accent glow behind avatar -->
            <div class="absolute -inset-2 bg-brand-accent/10 rounded-2xl blur-xl -z-10" aria-hidden="true"></div>
          </div>
        </div>
        
        <!-- Info -->
        <div class="text-center md:text-left">
          <h1 class="text-3xl md:text-4xl font-serif font-medium text-brand-text mb-4 text-balance">About Me</h1>
          <p class="text-brand-muted text-lg leading-relaxed max-w-xl text-pretty">
            A teenage open-source enthusiast and developer from China, passionate about coding, mathematics, and artificial intelligence.
          </p>
        </div>
      </div>
    </section>

    <!-- Divider -->
    <div class="h-px bg-gradient-to-r from-transparent via-white/[0.06] to-transparent" aria-hidden="true"></div>

    <!-- Bio Section -->
    <section class="py-12 md:py-16 reveal">
      <div class="space-y-6 text-brand-muted leading-relaxed">
        <p>
          Hello! I'm Morax Cheng. I love to explore new technologies and apply them to solve real-world problems. When I'm not coding, you can find me reading sci-fi novels or playing chess.
        </p>
        
        <!-- Status Cards -->
        <div class="grid md:grid-cols-2 gap-4 my-10">
          <a 
            href="https://github.com/tjy-gitnub/win12" 
            target="_blank" 
            rel="noopener noreferrer" 
            class="group glass-card p-5 reveal stagger-1"
          >
            <h3 class="text-xs font-medium text-brand-accent uppercase tracking-wider mb-2.5 font-mono">Currently Working On</h3>
            <div class="flex items-center gap-2 text-brand-text font-medium group-hover:text-brand-accent transition-colors duration-smooth">
              Windows 12 Web
              <i class="fa-solid fa-arrow-up-right text-xs opacity-0 group-hover:opacity-100 transition-all duration-smooth" aria-hidden="true"></i>
            </div>
          </a>
          
          <div class="glass-card p-5 reveal stagger-2">
            <h3 class="text-xs font-medium text-brand-muted uppercase tracking-wider mb-2.5 font-mono">Currently Learning</h3>
            <p class="text-brand-text font-medium">Matlab & Machine Learning</p>
          </div>
        </div>
        
        <p>
          I'm looking to collaborate on <a href="https://github.com/lanbinshijie/bili2text" class="text-brand-accent hover:underline transition-all duration-fast" target="_blank" rel="noopener noreferrer">bili2text</a> and other exciting open-source projects.
        </p>
        
        <!-- Ask Me About -->
        <div class="glass-card p-5 flex flex-wrap items-center gap-3 text-sm reveal">
          <span class="font-medium text-brand-text">Ask me about:</span>
          <div class="flex flex-wrap gap-2">
            {["Python", "C++", "Machine Learning", "Data Analysis"].map(topic => (
              <span class="inline-flex items-center px-2.5 py-1 bg-white/[0.04] text-brand-muted text-xs rounded-md font-mono">
                {topic}
              </span>
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- Divider -->
    <div class="h-px bg-gradient-to-r from-transparent via-white/[0.06] to-transparent" aria-hidden="true"></div>

    <!-- Technical Skills -->
    <section class="py-12 md:py-16">
      <h2 class="text-2xl font-serif font-medium text-brand-text mb-10 reveal">Technical Skills</h2>
      <div class="grid gap-4 md:grid-cols-2">
        {skillCategories.map((category, i) => (
          <div class={`glass-card p-5 reveal stagger-${(i % 4) + 1}`}>
            <div class="flex items-center gap-3 mb-4">
              <div class="flex items-center justify-center w-8 h-8 rounded-lg bg-brand-accent/[0.08] text-brand-accent">
                <i class={`${category.icon} text-sm`} aria-hidden="true"></i>
              </div>
              <h3 class="text-sm font-medium text-brand-text">{category.category}</h3>
            </div>
            <div class="flex flex-wrap gap-2">
              {category.skills.map(skill => (
                <span class="inline-flex items-center px-2.5 py-1 bg-white/[0.04] text-brand-muted text-xs rounded-md font-mono hover:text-brand-accent hover:bg-brand-accent/[0.06] transition-colors duration-fast cursor-default">
                  {skill}
                </span>
              ))}
            </div>
          </div>
        ))}
      </div>
    </section>
  </div>
</Layout>
