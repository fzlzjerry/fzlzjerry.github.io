---
const links = [
  { href: '/', text: 'Home' },
  { href: '/projects', text: 'Projects' },
  { href: '/blog', text: 'Blog' },
  { href: '/awards', text: 'Awards' },
  { href: '/about', text: 'About' },
];

const currentPath = Astro.url.pathname;
const isActive = (href: string) => {
  if (href === '/') return currentPath === '/';
  return currentPath.startsWith(href);
};
---

<header class="sticky top-0 z-50 w-full backdrop-blur-md bg-white/80 border-b border-zinc-100 transition-all duration-300">
  <nav class="max-w-5xl mx-auto px-4 sm:px-6 h-16 flex items-center justify-between">
    <!-- Logo -->
    <div class="flex items-center">
      <a href="/" class="text-lg font-serif font-semibold tracking-tight hover:text-zinc-600 transition-colors">
        Morax Cheng
      </a>
    </div>
    
    <!-- Desktop Menu -->
    <ul class="hidden md:flex gap-8 items-center">
      {links.map(link => (
        <li>
          <a 
            href={link.href}
            class={`text-sm font-medium transition-colors hover:text-zinc-900 ${
              isActive(link.href) ? 'text-zinc-900' : 'text-zinc-500'
            }`}
          >
            {link.text}
          </a>
        </li>
      ))}
      
      <!-- Search Trigger -->
      <li>
        <button
          aria-label="Search"
          class="text-zinc-500 hover:text-zinc-900 transition-colors p-1"
          onclick="document.dispatchEvent(new CustomEvent('open-command-palette'))"
        >
          <i class="fa-solid fa-magnifying-glass"></i>
        </button>
      </li>
    </ul>
    
    <!-- Mobile Menu Button -->
    <button 
      id="menu-toggle"
      class="md:hidden p-2 text-zinc-600 hover:text-zinc-900 hover:bg-zinc-100 rounded-md transition-colors focus:outline-none focus:ring-2 focus:ring-zinc-200"
      aria-label="Toggle menu"
    >
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path class="menu-open" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        <path class="menu-close hidden" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
      </svg>
    </button>

    <!-- Mobile Menu Dropdown -->
    <div id="mobile-menu" class="absolute top-full left-0 right-0 hidden md:hidden bg-white border-b border-zinc-100 shadow-lg">
      <ul class="py-2 px-4 flex flex-col gap-1">
        {links.map(link => (
          <li>
            <a 
              href={link.href}
              class={`block px-4 py-3 text-sm rounded-md transition-colors ${
                isActive(link.href) 
                  ? 'bg-zinc-50 text-zinc-900 font-medium' 
                  : 'text-zinc-600 hover:bg-zinc-50 hover:text-zinc-900'
              }`}
            >
              {link.text}
            </a>
          </li>
        ))}
        <li>
           <button 
             class="w-full text-left block px-4 py-3 text-sm text-zinc-600 hover:bg-zinc-50 hover:text-zinc-900 rounded-md transition-colors"
             onclick="document.dispatchEvent(new CustomEvent('open-command-palette')); document.getElementById('mobile-menu').classList.add('hidden');"
           >
             <i class="fa-solid fa-magnifying-glass mr-2"></i> Search
           </button>
        </li>
      </ul>
    </div>
  </nav>
</header>

<style>
  /* Optional: Add a subtle animation to the mobile menu */
  #mobile-menu:not(.hidden) {
    animation: slideDown 0.2s ease-out forwards;
    transform-origin: top;
  }

  @keyframes slideDown {
    from {
      opacity: 0;
      transform: scaleY(0.95) translateY(-10px);
    }
    to {
      opacity: 1;
      transform: scaleY(1) translateY(0);
    }
  }
</style>