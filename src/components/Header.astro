---
const links = [
  { href: '/', text: 'Home' },
  { href: '/projects', text: 'Projects' },
  { href: '/blog', text: 'Blog' },
  { href: '/awards', text: 'Awards' },
  { href: '/igem', text: 'iGEM' },
  { href: '/about', text: 'About' },
];
---

<header class="border-b sticky top-0 z-50 backdrop-blur-sm bg-opacity-95" style="background-color: var(--primary-light); border-color: var(--border-light);">
  <nav class="max-w-4xl mx-auto px-4 flex items-center justify-between relative h-16">
    <div class="flex items-center">
      <a href="/" class="text-xl" style="font-weight: 400; letter-spacing: 0.15em; text-transform: uppercase; display: inline-flex; align-items: center; height: 2rem;">Morax</a>
    </div>
    
    <!-- Mobile menu button -->
    <button 
      id="menu-toggle"
      class="md:hidden p-2 rounded transition-colors"
      style="border: 1px solid var(--border-light);"
      aria-label="Toggle menu"
    >
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path class="menu-open" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        <path class="menu-close hidden" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
      </svg>
    </button>
    
    <!-- Desktop menu -->
    <ul class="hidden md:flex gap-6 items-center" style="margin-top: 0.875rem;">
      {links.map(link => (
        <li>
          <a 
            href={link.href}
            class="transition-colors"
            style="color: var(--text-muted-light); font-size: 0.9rem; letter-spacing: 0.05em; display: inline-flex; align-items: center; height: 2rem;" 
          >
            {link.text}
          </a>
        </li>
      ))}
    </ul>
    
    <!-- Mobile menu -->
    <div id="mobile-menu" class="absolute top-full left-0 right-0 hidden shadow-lg md:hidden" style="background-color: var(--primary-light); border: 1px solid var(--border-light); border-top: none;">
      <ul class="py-2">
        {links.map(link => (
          <li>
            <a 
              href={link.href}
              class="block px-4 py-2 transition-colors"
              style="color: var(--text-muted-light); font-size: 0.9rem; letter-spacing: 0.05em;"
              onmouseover="this.style.backgroundColor = 'var(--accent-light)'"
              onmouseout="this.style.backgroundColor = 'transparent'"
            >
              {link.text}
            </a>
          </li>
        ))}
      </ul>
    </div>
  </nav>
</header>

<style>
  nav a:hover {
    color: var(--text-light) !important;
  }
</style>

<script>
  const menuToggle = document.getElementById('menu-toggle');
  const mobileMenu = document.getElementById('mobile-menu');
  const menuOpen = menuToggle?.querySelector('.menu-open');
  const menuClose = menuToggle?.querySelector('.menu-close');

  menuToggle?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
    menuOpen?.classList.toggle('hidden');
    menuClose?.classList.toggle('hidden');
  });
</script>