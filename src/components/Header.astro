---
const links = [
  { href: '/', text: 'Home' },
  { href: '/projects', text: 'Projects' },
  { href: '/blog', text: 'Blog' },
  { href: '/awards', text: 'Awards' },
  { href: '/about', text: 'About' },
];

const currentPath = Astro.url.pathname;
const isActive = (href: string) => {
  if (href === '/') return currentPath === '/';
  return currentPath.startsWith(href);
};
---

<header class="sticky top-0 z-50 w-full bg-[#09090A] border-b border-white/[0.08] transition-all duration-base">
  <!-- Skip to main content link for accessibility -->
  <a href="#main-content" class="sr-only focus:not-sr-only focus:absolute focus:top-2 focus:left-2 focus:z-50 focus:px-4 focus:py-2 focus:bg-[#E8A838] focus:text-[#0C0C0E] focus:rounded-[3px] focus:text-sm focus:font-medium">
    Skip to main content
  </a>

  <nav class="max-w-5xl mx-auto px-4 sm:px-6 h-16 flex items-center justify-between" role="navigation" aria-label="Main navigation">
    <!-- Logo -->
    <div class="flex items-center">
      <a
        href="/"
        class="text-lg font-display italic text-[#F5F5F0] tracking-tight hover:text-[#E8A838] transition-colors duration-fast focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-[#E8A838] focus-visible:ring-offset-2 focus-visible:ring-offset-[#0C0C0E] rounded-sm"
      >
        Morax<span class="text-[#E8A838]">.</span>
      </a>
    </div>

    <!-- Desktop Menu -->
    <ul class="hidden md:flex gap-8 items-center" role="list">
      {links.map(link => (
        <li>
          <a
            href={link.href}
            class={`relative font-grotesk text-xs font-medium uppercase tracking-[0.15em] transition-colors duration-fast hover:text-[#F5F5F0] focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-[#E8A838] focus-visible:ring-offset-2 focus-visible:ring-offset-[#0C0C0E] rounded-sm py-1 ${
              isActive(link.href) ? 'text-[#E8A838]' : 'text-[#6B6B65]'
            }`}
            aria-current={isActive(link.href) ? 'page' : undefined}
          >
            {link.text}
            {isActive(link.href) && (
              <span class="absolute -bottom-1 left-1/2 -translate-x-1/2 w-1 h-1 bg-[#E8A838] rounded-[2px]" aria-hidden="true"></span>
            )}
          </a>
        </li>
      ))}

      <!-- Search Trigger -->
      <li>
        <button
          aria-label="Open search"
          class="flex items-center justify-center w-8 h-8 text-[#6B6B65] hover:text-[#E8A838] bg-white/[0.03] hover:bg-white/[0.06] border border-white/[0.06] hover:border-[rgba(232,168,56,0.3)] rounded-[2px] transition-all duration-fast focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-[#E8A838] focus-visible:ring-offset-2 focus-visible:ring-offset-[#0C0C0E]"
          onclick="document.dispatchEvent(new CustomEvent('open-command-palette'))"
        >
          <i class="fa-solid fa-magnifying-glass text-xs" aria-hidden="true"></i>
        </button>
      </li>
    </ul>

    <!-- Mobile Menu Button -->
    <button
      id="menu-toggle"
      class="md:hidden flex items-center justify-center w-10 h-10 text-[#A8A8A0] hover:text-[#F5F5F0] rounded-[3px] transition-all duration-fast focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-[#E8A838] focus-visible:ring-offset-2 focus-visible:ring-offset-[#0C0C0E]"
      aria-label="Toggle menu"
      aria-expanded="false"
      aria-controls="mobile-menu"
    >
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
        <path class="menu-open" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        <path class="menu-close hidden" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
      </svg>
    </button>

    <!-- Mobile Menu Panel -->
    <div
      id="mobile-menu"
      class="fixed right-0 top-0 h-full w-72 hidden md:hidden bg-[#101012] border-l border-white/[0.08] shadow-[8px_0_0_rgba(0,0,0,0.36)] z-[60]"
      role="menu"
      aria-label="Mobile navigation"
    >
      <div class="flex items-center justify-between px-6 h-16 border-b border-white/[0.06]">
        <span class="font-display italic text-[#F5F5F0]">Menu</span>
        <button
          class="flex items-center justify-center w-8 h-8 text-[#6B6B65] hover:text-[#F5F5F0] rounded-[3px] transition-colors"
          onclick="document.getElementById('mobile-menu').classList.add('hidden'); document.querySelector('.menu-open').classList.remove('hidden'); document.querySelector('.menu-close').classList.add('hidden');"
          aria-label="Close menu"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>
        </button>
      </div>
      <ul class="py-4 px-4 flex flex-col gap-1" role="list">
        {links.map(link => (
          <li role="none">
            <a
              href={link.href}
              class={`block px-4 py-3 font-grotesk text-sm uppercase tracking-[0.1em] rounded-[3px] transition-all duration-fast focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-[#E8A838] focus-visible:ring-offset-1 ${
                isActive(link.href)
                  ? 'bg-white/[0.06] text-[#E8A838] font-medium border-l-2 border-[#E8A838]'
                  : 'text-[#A8A8A0] hover:bg-white/[0.03] hover:text-[#F5F5F0]'
              }`}
              role="menuitem"
              aria-current={isActive(link.href) ? 'page' : undefined}
            >
              {link.text}
            </a>
          </li>
        ))}
        <li role="none" class="mt-2 pt-2 border-t border-white/[0.06]">
           <button
             class="w-full text-left flex items-center gap-2 px-4 py-3 font-grotesk text-sm text-[#A8A8A0] hover:bg-white/[0.03] hover:text-[#F5F5F0] rounded-[3px] transition-all duration-fast focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-[#E8A838] focus-visible:ring-offset-1"
             onclick="document.dispatchEvent(new CustomEvent('open-command-palette')); document.getElementById('mobile-menu').classList.add('hidden');"
             role="menuitem"
           >
             <i class="fa-solid fa-magnifying-glass text-xs" aria-hidden="true"></i>
             <span>Search</span>
           </button>
        </li>
      </ul>
    </div>
  </nav>
</header>

<style>
  /* Mobile menu animation */
  #mobile-menu:not(.hidden) {
    animation: slideInRight 300ms var(--ease-spring, cubic-bezier(0.22, 1, 0.36, 1)) forwards;
  }

  @keyframes slideInRight {
    from {
      opacity: 0;
      transform: translateX(100%);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  /* Active nav indicator animation */
  nav a span[aria-hidden="true"] {
    animation: expandDot var(--transition-base, 200ms) var(--ease-out, cubic-bezier(0, 0, 0.2, 1)) forwards;
  }

  @keyframes expandDot {
    from {
      transform: translateX(-50%) scale(0);
    }
    to {
      transform: translateX(-50%) scale(1);
    }
  }

  header.scrolled {
    box-shadow: 0 4px 20px rgba(0,0,0,0.3);
  }
</style>
