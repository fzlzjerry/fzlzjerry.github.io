---
const links = [
  { href: '/', text: 'Home' },
  { href: '/projects', text: 'Projects' },
  { href: '/blog', text: 'Blog' },
  { href: '/awards', text: 'Awards' },
  { href: '/igem', text: 'iGEM' },
  { href: '/about', text: 'About' },
];
---

<header class="sticky top-0 z-50 backdrop-blur-md bg-white/80 border-b border-gray-200/50 shadow-sm">
  <nav class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 flex items-center justify-between relative h-16">
    <div class="flex items-center">
      <a href="/" class="group flex items-center space-x-2">
        <span class="text-2xl font-bold bg-gradient-to-r from-blue-500 to-indigo-600 bg-clip-text text-transparent hover:from-indigo-600 hover:to-blue-500 transition-all duration-300">
          Morax
        </span>
        <span class="inline-block w-2 h-2 bg-gradient-to-r from-blue-500 to-indigo-600 rounded-full animate-pulse"></span>
      </a>
    </div>
    
    <!-- Mobile menu button -->
    <button 
      id="menu-toggle"
      class="md:hidden p-2 rounded-lg bg-gradient-to-r from-blue-500/10 to-indigo-600/10 hover:from-blue-500/20 hover:to-indigo-600/20 transition-all duration-300"
      aria-label="Toggle menu"
    >
      <svg class="w-6 h-6 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path class="menu-open transition-all duration-300" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        <path class="menu-close hidden transition-all duration-300" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
      </svg>
    </button>
    
    <!-- Desktop menu -->
    <ul class="hidden md:flex gap-1 items-center">
      {links.map((link, index) => (
        <li class="nav-item" style={`animation-delay: ${index * 0.1}s`}>
          <a 
            href={link.href}
            class="relative px-4 py-2 text-sm font-medium text-gray-700 hover:text-blue-600 transition-all duration-300 group"
          >
            <span class="relative z-10">{link.text}</span>
            <span class="absolute inset-0 bg-gradient-to-r from-blue-500/10 to-indigo-600/10 rounded-lg scale-0 group-hover:scale-100 transition-transform duration-300"></span>
          </a>
        </li>
      ))}
    </ul>
    
    <!-- Mobile menu -->
    <div id="mobile-menu" class="absolute top-full left-0 right-0 hidden md:hidden mt-2 mx-4 bg-white/95 backdrop-blur-md rounded-2xl shadow-xl border border-gray-200/50 overflow-hidden">
      <ul class="py-2">
        {links.map((link, index) => (
          <li class="mobile-nav-item" style={`animation-delay: ${index * 0.05}s`}>
            <a 
              href={link.href}
              class="block px-6 py-3 text-sm font-medium text-gray-700 hover:text-blue-600 hover:bg-gradient-to-r hover:from-blue-500/10 hover:to-indigo-600/10 transition-all duration-300"
            >
              {link.text}
            </a>
          </li>
        ))}
      </ul>
    </div>
  </nav>
</header>

<style>
  @keyframes slideDown {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateX(-10px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }
  
  .nav-item {
    animation: slideDown 0.5s ease-out forwards;
    opacity: 0;
  }
  
  .mobile-nav-item {
    animation: fadeIn 0.3s ease-out forwards;
    opacity: 0;
  }
  
  #mobile-menu {
    animation: slideDown 0.3s ease-out;
  }
</style>

<script>
  const menuToggle = document.getElementById('menu-toggle');
  const mobileMenu = document.getElementById('mobile-menu');
  const menuOpen = menuToggle?.querySelector('.menu-open');
  const menuClose = menuToggle?.querySelector('.menu-close');

  menuToggle?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
    menuOpen?.classList.toggle('hidden');
    menuClose?.classList.toggle('hidden');
  });
</script>