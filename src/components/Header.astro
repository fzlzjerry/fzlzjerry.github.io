---
const links = [
  { href: '/', text: 'Home' },
  { href: '/projects', text: 'Projects' },
  { href: '/blog', text: 'Blog' },
  { href: '/awards', text: 'Awards' },
  { href: '/about', text: 'About' },
];

const currentPath = Astro.url.pathname;
const isActive = (href: string) => {
  if (href === '/') return currentPath === '/';
  return currentPath.startsWith(href);
};
---

<header class="sticky top-0 z-50 w-full backdrop-blur-md bg-white/80 border-b border-zinc-100 transition-all duration-base">
  <!-- Skip to main content link for accessibility -->
  <a href="#main-content" class="sr-only focus:not-sr-only focus:absolute focus:top-2 focus:left-2 focus:z-50 focus:px-4 focus:py-2 focus:bg-zinc-900 focus:text-white focus:rounded-lg focus:text-sm focus:font-medium">
    Skip to main content
  </a>
  
  <nav class="max-w-5xl mx-auto px-4 sm:px-6 h-16 flex items-center justify-between" role="navigation" aria-label="Main navigation">
    <!-- Logo -->
    <div class="flex items-center">
      <a 
        href="/" 
        class="text-lg font-serif font-semibold tracking-tight hover:text-zinc-600 transition-colors duration-fast focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-zinc-900 focus-visible:ring-offset-2 rounded-sm"
      >
        Morax Cheng
      </a>
    </div>
    
    <!-- Desktop Menu -->
    <ul class="hidden md:flex gap-8 items-center" role="list">
      {links.map(link => (
        <li>
          <a 
            href={link.href}
            class={`relative text-sm font-medium transition-colors duration-fast hover:text-zinc-900 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-zinc-900 focus-visible:ring-offset-2 rounded-sm py-1 ${
              isActive(link.href) ? 'text-zinc-900' : 'text-zinc-500'
            }`}
            aria-current={isActive(link.href) ? 'page' : undefined}
          >
            {link.text}
            {isActive(link.href) && (
              <span class="absolute -bottom-1 left-0 right-0 h-0.5 bg-zinc-900 rounded-full" aria-hidden="true"></span>
            )}
          </a>
        </li>
      ))}
      
      <!-- Search Trigger -->
      <li>
        <button
          aria-label="Open search"
          class="flex items-center justify-center w-8 h-8 text-zinc-500 hover:text-zinc-900 hover:bg-zinc-100 rounded-md transition-all duration-fast focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-zinc-900 focus-visible:ring-offset-2"
          onclick="document.dispatchEvent(new CustomEvent('open-command-palette'))"
        >
          <i class="fa-solid fa-magnifying-glass text-sm" aria-hidden="true"></i>
        </button>
      </li>
    </ul>
    
    <!-- Mobile Menu Button -->
    <button 
      id="menu-toggle"
      class="md:hidden flex items-center justify-center w-10 h-10 text-zinc-600 hover:text-zinc-900 hover:bg-zinc-100 rounded-lg transition-all duration-fast focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-zinc-900 focus-visible:ring-offset-2"
      aria-label="Toggle menu"
      aria-expanded="false"
      aria-controls="mobile-menu"
    >
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
        <path class="menu-open" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        <path class="menu-close hidden" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
      </svg>
    </button>

    <!-- Mobile Menu Dropdown -->
    <div 
      id="mobile-menu" 
      class="absolute top-full left-0 right-0 hidden md:hidden bg-white border-b border-zinc-100 shadow-lg"
      role="menu"
      aria-label="Mobile navigation"
    >
      <ul class="py-3 px-4 flex flex-col gap-1" role="list">
        {links.map(link => (
          <li role="none">
            <a 
              href={link.href}
              class={`block px-4 py-3 text-sm rounded-lg transition-all duration-fast focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-zinc-900 focus-visible:ring-offset-1 ${
                isActive(link.href) 
                  ? 'bg-zinc-100 text-zinc-900 font-medium' 
                  : 'text-zinc-600 hover:bg-zinc-50 hover:text-zinc-900'
              }`}
              role="menuitem"
              aria-current={isActive(link.href) ? 'page' : undefined}
            >
              {link.text}
            </a>
          </li>
        ))}
        <li role="none">
           <button 
             class="w-full text-left flex items-center gap-2 px-4 py-3 text-sm text-zinc-600 hover:bg-zinc-50 hover:text-zinc-900 rounded-lg transition-all duration-fast focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-zinc-900 focus-visible:ring-offset-1"
             onclick="document.dispatchEvent(new CustomEvent('open-command-palette')); document.getElementById('mobile-menu').classList.add('hidden');"
             role="menuitem"
           >
             <i class="fa-solid fa-magnifying-glass" aria-hidden="true"></i>
             <span>Search</span>
           </button>
        </li>
      </ul>
    </div>
  </nav>
</header>

<style>
  /* Mobile menu animation */
  #mobile-menu:not(.hidden) {
    animation: slideDown var(--transition-smooth, 300ms) var(--ease-out, cubic-bezier(0, 0, 0.2, 1)) forwards;
    transform-origin: top;
  }

  @keyframes slideDown {
    from {
      opacity: 0;
      transform: translateY(-8px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  /* Active nav indicator animation */
  nav a span[aria-hidden="true"] {
    animation: expandWidth var(--transition-base, 200ms) var(--ease-out, cubic-bezier(0, 0, 0.2, 1)) forwards;
  }
  
  @keyframes expandWidth {
    from {
      transform: scaleX(0);
    }
    to {
      transform: scaleX(1);
    }
  }
  
  /* Smooth header shadow on scroll (via JS if needed) */
  header.scrolled {
    box-shadow: var(--shadow-sm, 0 1px 3px 0 rgb(0 0 0 / 0.05));
  }
</style>
