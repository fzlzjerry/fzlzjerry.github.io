---
const links = [
  { href: '/', text: 'Home' },
  { href: '/projects', text: 'Projects' },
  { href: '/blog', text: 'Blog' },
  { href: '/awards', text: 'Awards' },
  { href: '/about', text: 'About' },
];

const currentPath = Astro.url.pathname;
const isActive = (href: string) => {
  if (href === '/') return currentPath === '/';
  return currentPath.startsWith(href);
};
---

<header class="sticky top-0 z-50 w-full transition-all duration-smooth" id="site-header">
  <!-- Skip to main content link for accessibility -->
  <a href="#main-content" class="sr-only focus:not-sr-only focus:absolute focus:top-2 focus:left-2 focus:z-50 focus:px-4 focus:py-2 focus:bg-brand-accent focus:text-brand-bg focus:rounded-lg focus:text-sm focus:font-medium">
    Skip to main content
  </a>
  
  <!-- Glass backdrop -->
  <div class="absolute inset-0 bg-brand-bg/70 backdrop-blur-xl border-b border-white/[0.04]"></div>
  
  <nav class="relative max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 h-16 flex items-center justify-between" role="navigation" aria-label="Main navigation">
    <!-- Logo -->
    <div class="flex items-center">
      <a 
        href="/" 
        class="group flex items-center"
      >
        <span class="text-lg font-serif font-semibold tracking-tight text-brand-text transition-colors duration-fast group-hover:text-brand-accent">
          Morax Cheng
        </span>
        <span class="ml-2 w-1.5 h-1.5 rounded-full bg-brand-accent opacity-0 group-hover:opacity-100 transition-opacity duration-smooth"></span>
      </a>
    </div>
    
    <!-- Desktop Menu -->
    <ul class="hidden md:flex items-center gap-1" role="list">
      {links.map(link => (
        <li>
          <a 
            href={link.href}
            class={`relative px-3.5 py-2 text-sm font-medium rounded-lg transition-all duration-fast ${
              isActive(link.href) 
                ? 'text-brand-accent bg-brand-accent/[0.08]' 
                : 'text-brand-muted hover:text-brand-text hover:bg-white/[0.04]'
            }`}
            aria-current={isActive(link.href) ? 'page' : undefined}
          >
            {link.text}
          </a>
        </li>
      ))}
      
      <!-- Separator -->
      <li aria-hidden="true">
        <div class="w-px h-4 bg-white/[0.08] mx-2"></div>
      </li>
      
      <!-- Search Trigger -->
      <li>
        <button
          aria-label="Open search"
          class="flex items-center justify-center w-9 h-9 text-brand-muted hover:text-brand-text hover:bg-white/[0.04] rounded-lg transition-all duration-fast"
          onclick="document.dispatchEvent(new CustomEvent('open-command-palette'))"
        >
          <i class="fa-solid fa-magnifying-glass text-sm" aria-hidden="true"></i>
        </button>
      </li>
    </ul>
    
    <!-- Mobile Menu Button -->
    <button 
      id="menu-toggle"
      class="md:hidden flex items-center justify-center w-10 h-10 text-brand-muted hover:text-brand-text hover:bg-white/[0.04] rounded-lg transition-all duration-fast"
      aria-label="Toggle menu"
      aria-expanded="false"
      aria-controls="mobile-menu"
    >
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
        <path class="menu-open" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 6h16M4 12h16M4 18h16"></path>
        <path class="menu-close hidden" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M6 18L18 6M6 6l12 12"></path>
      </svg>
    </button>

    <!-- Mobile Menu Dropdown -->
    <div 
      id="mobile-menu" 
      class="absolute top-full left-0 right-0 hidden md:hidden"
      role="menu"
      aria-label="Mobile navigation"
    >
      <div class="bg-brand-bg/95 backdrop-blur-xl border-b border-white/[0.04] shadow-2xl">
        <ul class="py-3 px-4 flex flex-col gap-1" role="list">
          {links.map(link => (
            <li role="none">
              <a 
                href={link.href}
                class={`block px-4 py-3 text-sm rounded-lg transition-all duration-fast ${
                  isActive(link.href) 
                    ? 'bg-brand-accent/[0.08] text-brand-accent font-medium' 
                    : 'text-brand-muted hover:bg-white/[0.04] hover:text-brand-text'
                }`}
                role="menuitem"
                aria-current={isActive(link.href) ? 'page' : undefined}
              >
                {link.text}
              </a>
            </li>
          ))}
          <li role="none">
             <button 
               class="w-full text-left flex items-center gap-2 px-4 py-3 text-sm text-brand-muted hover:bg-white/[0.04] hover:text-brand-text rounded-lg transition-all duration-fast"
               onclick="document.dispatchEvent(new CustomEvent('open-command-palette')); document.getElementById('mobile-menu').classList.add('hidden');"
               role="menuitem"
             >
               <i class="fa-solid fa-magnifying-glass" aria-hidden="true"></i>
               <span>Search</span>
             </button>
          </li>
        </ul>
      </div>
    </div>
  </nav>
</header>

<style>
  #mobile-menu:not(.hidden) {
    animation: slideDown 300ms cubic-bezier(0, 0, 0.2, 1) forwards;
    transform-origin: top;
  }

  @keyframes slideDown {
    from {
      opacity: 0;
      transform: translateY(-8px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
