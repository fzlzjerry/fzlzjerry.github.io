---
const currentYear = new Date().getFullYear();

const socialLinks = [
  { href: "https://x.com/moraxcheng", icon: "fa-brands fa-x-twitter", label: "X (Twitter)" },
  { href: "https://fb.com/moraxcheng", icon: "fa-brands fa-facebook", label: "Facebook" },
  { href: "https://instagram.com/moraxcheng", icon: "fa-brands fa-instagram", label: "Instagram" },
  { href: "https://github.com/fzlzjerry", icon: "fa-brands fa-github", label: "GitHub" }
];
---

<footer class="border-t border-zinc-100 bg-white py-12 mt-auto">
  <div class="max-w-5xl mx-auto px-4 sm:px-6 flex flex-col items-center gap-6">
    
    <!-- Social Links -->
    <div class="flex items-center gap-4">
      {socialLinks.map(link => (
        <a
          href={link.href}
          class="group p-2 text-zinc-400 hover:text-zinc-900 transition-colors duration-200"
          target="_blank"
          rel="noopener noreferrer"
          aria-label={link.label}
        >
          <i class={`${link.icon} text-xl transform transition-transform duration-200 group-hover:scale-110`}></i>
        </a>
      ))}
      <button
        class="group p-2 text-zinc-400 hover:text-zinc-900 transition-colors duration-200 bg-transparent border-none cursor-pointer"
        onclick="window.location.href='mailto:james20081204@gmail.com'"
        aria-label="Email"
      >
        <i class="fa-regular fa-envelope text-xl transform transition-transform duration-200 group-hover:scale-110"></i>
      </button>
    </div>

    <!-- Copyright -->
    <p class="text-sm text-zinc-400 font-medium">
      Â© {currentYear} Morax Cheng. All rights reserved.
    </p>
  </div>
</footer>
