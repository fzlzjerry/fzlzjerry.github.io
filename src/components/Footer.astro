---
const currentYear = new Date().getFullYear();

const socialLinks = [
  { href: "https://x.com/moraxcheng", icon: "fa-brands fa-x-twitter", label: "X (Twitter)" },
  { href: "https://fb.com/moraxcheng", icon: "fa-brands fa-facebook", label: "Facebook" },
  { href: "https://instagram.com/moraxcheng", icon: "fa-brands fa-instagram", label: "Instagram" },
  { href: "https://github.com/fzlzjerry", icon: "fa-brands fa-github", label: "GitHub" }
];
---

<footer class="border-t" style="background-color: var(--bg); border-color: var(--border);">
  <div class="max-w-4xl mx-auto px-4 py-12">
    <div class="flex flex-col items-center gap-6">
      <div class="flex flex-wrap justify-center gap-4 sm:gap-6">
        {socialLinks.map(link => (
          <a
            href={link.href}
            class="transition-colors p-2"
            style="color: var(--text-muted);"
            target="_blank"
            rel="noopener noreferrer"
            aria-label={link.label}
          >
            <i class={`${link.icon} text-xl font-icon`}></i>
          </a>
        ))}
        <button
          class="transition-colors p-2"
          style="color: var(--text-muted);"
          onclick="window.location.href='mailto:james20081204@gmail.com'"
          aria-label="Email"
        >
          <i class="fa-regular fa-envelope text-xl font-icon"></i>
        </button>
      </div>
      <p class="text-sm text-center px-4" style="color: var(--text-muted); font-style: italic;">
        © {currentYear} Morax Cheng. All rights reserved.
      </p>
    </div>
  </div>
</footer>

<style>
  .font-icon {
    font-family: 'Font Awesome 6 Free', 'Font Awesome 6 Brands', sans-serif !important;
    /* 增加特异性和优先级，确保图标字体不被全局字体覆盖 */
    font-weight: 900 !important;
  }
  
  
  footer a:hover, footer button:hover {
    color: var(--text) !important;
  }
  
</style>

