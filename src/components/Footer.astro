---
const currentYear = new Date().getFullYear();

const socialLinks = [
  { href: "https://x.com/moraxcheng", icon: "fa-brands fa-x-twitter", label: "Follow on X (Twitter)" },
  { href: "https://fb.com/moraxcheng", icon: "fa-brands fa-facebook", label: "Follow on Facebook" },
  { href: "https://instagram.com/moraxcheng", icon: "fa-brands fa-instagram", label: "Follow on Instagram" },
  { href: "https://github.com/fzlzjerry", icon: "fa-brands fa-github", label: "View GitHub profile" }
];
---

<footer class="relative mt-auto border-t border-white/[0.04]" role="contentinfo">
  <!-- Subtle gradient fade at top -->
  <div class="absolute top-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-brand-accent/20 to-transparent"></div>
  
  <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="flex flex-col items-center gap-8">
      
      <!-- Social Links -->
      <nav aria-label="Social media links">
        <ul class="flex items-center gap-1" role="list">
          {socialLinks.map(link => (
            <li>
              <a
                href={link.href}
                class="group flex items-center justify-center w-10 h-10 text-brand-muted hover:text-brand-accent rounded-lg transition-all duration-smooth hover:bg-brand-accent/[0.08]"
                target="_blank"
                rel="noopener noreferrer"
                aria-label={link.label}
              >
                <i class={`${link.icon} text-lg transition-transform duration-smooth group-hover:scale-110`} aria-hidden="true"></i>
              </a>
            </li>
          ))}
          <li>
            <a
              href="mailto:james20081204@gmail.com"
              class="group flex items-center justify-center w-10 h-10 text-brand-muted hover:text-brand-accent rounded-lg transition-all duration-smooth hover:bg-brand-accent/[0.08]"
              aria-label="Send email"
            >
              <i class="fa-regular fa-envelope text-lg transition-transform duration-smooth group-hover:scale-110" aria-hidden="true"></i>
            </a>
          </li>
        </ul>
      </nav>

      <!-- Copyright -->
      <p class="text-sm text-neutral-600 font-medium tracking-wide">
        &copy; {currentYear} Morax Cheng
      </p>
    </div>
  </div>
</footer>
