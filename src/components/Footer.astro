---
const currentYear = new Date().getFullYear();

const socialLinks = [
  { href: "https://x.com/moraxcheng", icon: "fa-brands fa-x-twitter", label: "Follow on X (Twitter)" },
  { href: "https://fb.com/moraxcheng", icon: "fa-brands fa-facebook", label: "Follow on Facebook" },
  { href: "https://instagram.com/moraxcheng", icon: "fa-brands fa-instagram", label: "Follow on Instagram" },
  { href: "https://github.com/fzlzjerry", icon: "fa-brands fa-github", label: "View GitHub profile" }
];
---

<footer class="bg-[#09090A] border-t border-white/[0.06] py-12 mt-auto" role="contentinfo">
  <!-- Gradient divider -->
  <div class="gradient-divider mb-12"></div>

  <div class="max-w-5xl mx-auto px-4 sm:px-6 flex flex-col items-center gap-6">

    <!-- Social Links -->
    <nav aria-label="Social media links">
      <ul class="flex items-center gap-3" role="list">
        {socialLinks.map(link => (
          <li>
            <a
              href={link.href}
              class="group flex items-center justify-center w-10 h-10 text-[#6B6B65] hover:text-[#E8A838] bg-white/[0.03] hover:bg-white/[0.06] border border-white/[0.06] hover:border-[rgba(232,168,56,0.3)] rounded-[2px] transition-all duration-fast focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-[#E8A838] focus-visible:ring-offset-2 focus-visible:ring-offset-[#0C0C0E]"
              target="_blank"
              rel="noopener noreferrer"
              aria-label={link.label}
            >
              <i class={`${link.icon} text-base transition-transform duration-fast group-hover:scale-110`} aria-hidden="true"></i>
            </a>
          </li>
        ))}
        <li>
          <a
            href="mailto:james20081204@gmail.com"
            class="group flex items-center justify-center w-10 h-10 text-[#6B6B65] hover:text-[#E8A838] bg-white/[0.03] hover:bg-white/[0.06] border border-white/[0.06] hover:border-[rgba(232,168,56,0.3)] rounded-[2px] transition-all duration-fast focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-[#E8A838] focus-visible:ring-offset-2 focus-visible:ring-offset-[#0C0C0E]"
            aria-label="Send email"
          >
            <i class="fa-regular fa-envelope text-base transition-transform duration-fast group-hover:scale-110" aria-hidden="true"></i>
          </a>
        </li>
      </ul>
    </nav>

    <!-- Copyright -->
    <p class="text-sm text-[#4A4A45] font-grotesk font-medium">
      &copy; {currentYear} Morax Cheng. All rights reserved.
    </p>
  </div>
</footer>
