---
interface Props {
	title: string;
	body: string;
	href: string;
}

const { href, title, body } = Astro.props;
---

<li class="group list-none">
	<a href={href} class="block h-full p-6 bg-white border border-zinc-200 rounded-xl transition-all duration-300 hover:border-zinc-300 hover:shadow-lg hover:-translate-y-1">
		<div class="flex items-center justify-between mb-2">
			<h2 class="text-lg font-semibold text-zinc-900 group-hover:text-zinc-700 transition-colors font-display">
				{title}
			</h2>
			<span class="text-zinc-400 group-hover:translate-x-1 transition-transform duration-300">
				&rarr;
			</span>
		</div>
		<p class="text-sm text-zinc-600 leading-relaxed">
			{body}
		</p>
	</a>
</li>
