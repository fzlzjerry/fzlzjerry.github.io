---
interface Props {
	title: string;
	body: string;
	href: string;
	variant?: 'default' | 'featured';
	tags?: string[];
	meta?: string;
}

const { href, title, body, variant = 'default', tags, meta } = Astro.props;
---

<li class="group list-none">
	<a href={href} class={`block h-full glass-card p-6 hover-lift ${variant === 'featured' ? 'border-brand-accent/20' : ''}`}>
		<div class="flex items-center justify-between gap-3 mb-3">
			<h2 class="text-lg font-medium text-brand-text group-hover:text-brand-accent transition-colors duration-smooth font-serif leading-snug">
				{title}
			</h2>
			<i class="fa-solid fa-arrow-up-right text-xs text-brand-muted group-hover:text-brand-accent group-hover:translate-x-0.5 group-hover:-translate-y-0.5 transition-all duration-smooth flex-shrink-0" aria-hidden="true"></i>
		</div>
		
		{meta && (
			<p class="text-xs text-brand-muted mb-2 font-mono uppercase tracking-wider">{meta}</p>
		)}
		
		<p class="text-sm text-brand-muted leading-relaxed line-clamp-3">
			{body}
		</p>
		
		{tags && tags.length > 0 && (
			<div class="flex flex-wrap gap-2 mt-4 pt-4 border-t border-white/[0.04]">
				{tags.map(tag => (
					<span class="inline-flex items-center px-2.5 py-1 bg-white/[0.04] text-brand-muted text-xs rounded-md font-mono">
						{tag}
					</span>
				))}
			</div>
		)}
	</a>
</li>
