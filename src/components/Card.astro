---
interface Props {
	title: string;
	body: string;
	href: string;
}

const { href, title, body } = Astro.props;
---

<li class="link-card">
	<a href={href}>
		<h2>
			{title}
			<span>&rarr;</span>
		</h2>
		<p>
			{body}
		</p>
	</a>
</li>
<style>
	.link-card {
		list-style: none;
		display: flex;
		padding: 2px;
		background: linear-gradient(135deg, var(--accent-light) 0%, var(--primary-light) 100%);
		border-radius: 12px;
		transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
		border: 2px solid var(--border-light);
		position: relative;
		overflow: hidden;
	}
	
	.link-card::before {
		content: '';
		position: absolute;
		top: 0;
		left: -100%;
		width: 100%;
		height: 100%;
		background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
		transition: left 0.6s cubic-bezier(0.4, 0, 0.2, 1);
	}
	
	.link-card > a {
		width: 100%;
		text-decoration: none;
		line-height: 1.6;
		padding: 1.75rem;
		border-radius: 10px;
		color: var(--text-light);
		background-color: var(--primary-light);
		position: relative;
		z-index: 1;
	}
	
	h2 {
		margin: 0;
		font-size: 1.25rem;
		transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
		font-weight: 400;
		letter-spacing: 0.02em;
	}
	
	p {
		margin-top: 0.75rem;
		margin-bottom: 0;
		color: var(--text-muted-light);
		line-height: 1.7;
	}
	
	.link-card:is(:hover, :focus-within) {
		transform: translateY(-3px);
		box-shadow: var(--shadow-lg);
		border-color: var(--text-muted-light);
	}
	
	.link-card:is(:hover, :focus-within)::before {
		left: 100%;
	}
	
	.link-card:is(:hover, :focus-within) h2 {
		color: var(--text-light);
		transform: translateX(5px);
	}
	
	.link-card:is(:hover, :focus-within) h2::after {
		content: ' â†’';
		margin-left: 0.5rem;
	}
</style>
