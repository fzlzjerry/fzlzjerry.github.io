---
interface Props {
	title: string;
	body: string;
	href: string;
	variant?: 'default' | 'featured';
	tags?: string[];
	meta?: string;
}

const { href, title, body, variant = 'default', tags, meta } = Astro.props;

const baseStyles = "block h-full p-6 bg-[#1C1C1F] border rounded-card transition-all duration-base hover:-translate-y-1 hover:shadow-[0_0_0_1px_rgba(232,168,56,0.3)] focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-[#E8A838] focus-visible:ring-offset-2 focus-visible:ring-offset-[#0C0C0E]";
const variantStyles = {
	default: "border-white/[0.06] hover:border-[rgba(232,168,56,0.3)]",
	featured: "border-white/[0.06] border-t-2 border-t-[#E8A838] hover:border-[rgba(232,168,56,0.3)]"
};
---

<li class="group list-none">
	<a href={href} class:list={[baseStyles, variantStyles[variant]]}>
		<div class="flex items-center justify-between gap-3 mb-3">
			<h2 class="text-lg font-medium text-[#F5F5F0] group-hover:text-[#E8A838] transition-colors duration-fast font-display leading-snug">
				{title}
			</h2>
			<span class="shrink-0 text-[#4A4A45] group-hover:text-[#E8A838] group-hover:translate-x-1 transition-all duration-smooth" aria-hidden="true">
				&rarr;
			</span>
		</div>

		{meta && (
			<p class="text-xs text-[#6B6B65] mb-2 font-grotesk font-medium uppercase tracking-wider">{meta}</p>
		)}

		<p class="text-sm text-[#A8A8A0] leading-relaxed line-clamp-3">
			{body}
		</p>

		{tags && tags.length > 0 && (
			<div class="flex flex-wrap gap-1.5 mt-4 pt-4 border-t border-white/[0.06]">
				{tags.map(tag => (
					<span class="inline-flex items-center px-2 py-0.5 bg-white/[0.05] text-[#6B6B65] text-xs rounded-full font-medium border border-white/[0.10]">
						{tag}
					</span>
				))}
			</div>
		)}
	</a>
</li>
