---
interface Props {
	title: string;
	body: string;
	href: string;
}

const { href, title, body } = Astro.props;
---

<li class="link-card group">
	<a href={href} class="block h-full">
		<div class="relative overflow-hidden rounded-xl bg-white shadow-lg hover:shadow-2xl transform hover:-translate-y-2 transition-all duration-300">
			<!-- Gradient overlay -->
			<div class="absolute inset-0 bg-gradient-to-br from-blue-500/10 via-indigo-600/10 to-purple-500/10 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
			
			<!-- Animated shimmer -->
			<div class="absolute inset-0 -translate-x-full group-hover:translate-x-full transition-transform duration-1000 bg-gradient-to-r from-transparent via-white/20 to-transparent"></div>
			
			<div class="relative z-10 p-6">
				<h2 class="text-xl font-bold text-gray-800 mb-2 group-hover:text-blue-600 transition-colors duration-300 flex items-center justify-between">
					<span>{title}</span>
					<span class="text-blue-500 group-hover:translate-x-1 transition-transform duration-300">â†’</span>
				</h2>
				<p class="text-gray-600 leading-relaxed">
					{body}
				</p>
			</div>
		</div>
	</a>
</li>
<style>
	.link-card {
		list-style: none;
		display: block;
	}
	
	.link-card a {
		text-decoration: none;
		color: inherit;
	}
</style>
